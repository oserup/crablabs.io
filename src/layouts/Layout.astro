---
import "@fontsource-variable/oxanium";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import CookieBanner from "../components/CookieBanner.astro";

// interface type-check properties
interface Props {
	title: string;
}

// links for nav bar
const links = [
	{
		text: "Home",
		href: "/",
	},
	{
		text: "About Us",
		href: "/about",
	},
	{
		text: "Services",
		href: "/services",
	},
	{
		text: "Careers",
		href: "/careers",
	},
	{
		text: "Contact Us",
		href: "/contact",
	},
	{
		text: "Get a Quote",
		href: "/quote",
	},
];

const { title } = Astro.props;
---

<!-- HTML layout -->
<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Custom engineering services for electronics design, software development, embedded systems, and product testing. Serving medical, industrial, robotics, IoT, and consumer electronics industries across the USA." />
		<meta name="keywords" content="engineering services, electronics design, software development, embedded systems, circuit design, PCB design, firmware development, product testing, validation testing, engineering consulting, medical devices, industrial automation, robotics, IoT, consumer electronics, power electronics, motor control, custom hardware, system integration, prototype development" />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Crab Labs" />
		<meta property="og:title" content="Professional Engineering Services | Electronics Design, Software Development & Testing" />
		<meta property="og:description" content="Custom engineering services for electronics design, software development, embedded systems, and testing. Serving medical, industrial, robotics, IoT, and consumer electronics industries." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://crablabs.io" />
		<meta property="og:image" content="https://crablabs.io/logo.svg" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Professional Engineering Services | Electronics Design & Software Development" />
		<meta name="twitter:description" content="Custom engineering services for electronics design, embedded systems, and software development. Serving medical, industrial, robotics, and IoT industries." />
		<meta name="twitter:image" content="https://crablabs.io/logo.svg" />
		<link rel="canonical" href="https://crablabs.io" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
	<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-VS3TXE9GHY"
		></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
			dataLayer.push(arguments);
			}
			gtag("js", new Date());
	
			gtag("config", "G-VS3TXE9GHY");
		</script>
		<!-- Analytics Tracking Code -->
		<script 
			async 
			src="https://cdn.jsdelivr.net/gh/leadinglydevelopment/pixel-tracking@latest/pixel.js" 
			data-site-id="crablabs.io"
			data-user-id="1741290011679_18954e29-5214-4eea-89ec-8a8d7f7cfafe"
		></script>
	<title>{title}</title>
	</head>
	<div class="flex flex-col h-screen">
		<NavBar links={links} />
		<div class="flex-grow">
			<slot />
		</div>
		<Footer />
		<CookieBanner />
	</div>

	<!-- <div class="flex flex-col h-screen">
		<div class="bg-red-500">header</div>
		<div class="bg-green-500 flex-grow">content</div>
		<div class="bg-blue-500">footer</div>
	</div> -->

	<!-- Preline UI script -->
	<script src="../../node_modules/preline/dist/preline.js"></script>

	<!-- CSS -->
	<style is:global>
		html {
			background: #13151a;
		}
	</style>


</html>
