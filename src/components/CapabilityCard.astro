---
/**
 * CapabilityCard - Reusable card for displaying capability lists
 * Used in: capabilities.astro (Hardware, Firmware, Lab, Tools, Regulatory sections)
 */
interface Props {
  label: string;
  items: string[];
  color?: 'brand' | 'blue' | 'emerald' | 'violet' | 'amber';
}

const { label, items, color = 'brand' } = Astro.props;

const colorClasses = {
  brand: {
    label: 'text-brand-600',
    dot: 'bg-brand-400',
    border: 'hover:border-brand-300',
  },
  blue: {
    label: 'text-blue-600',
    dot: 'bg-blue-400',
    border: 'hover:border-blue-300',
  },
  emerald: {
    label: 'text-emerald-600',
    dot: 'bg-emerald-400',
    border: 'hover:border-emerald-300',
  },
  violet: {
    label: 'text-violet-600',
    dot: 'bg-violet-400',
    border: 'hover:border-violet-300',
  },
  amber: {
    label: 'text-amber-600',
    dot: 'bg-amber-400',
    border: 'hover:border-amber-300',
  },
};

const classes = colorClasses[color];
---

<div class={`p-4 rounded-lg border border-neutral-200 ${classes.border} hover:shadow-sm transition-all`}>
  <p class={`text-xs font-mono ${classes.label} uppercase tracking-wide mb-3`}>{label}</p>
  <ul class="space-y-1.5 text-sm text-neutral-700">
    {items.map((item) => (
      <li class="flex items-center gap-2">
        <span class={`w-1 h-1 rounded-full ${classes.dot}`}></span>
        <span>{item}</span>
      </li>
    ))}
  </ul>
</div>
