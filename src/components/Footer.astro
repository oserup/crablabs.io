---
import { company } from '../config/company';
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <a href="/" class="footer-logo">
        <img src="/android-chrome-192x192.png" alt="Crab Labs" width="20" height="20" />
        <span>{company.name}</span>
      </a>
      <span class="footer-copyright">&copy; {new Date().getFullYear()} {company.legalName}</span>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--neutral-900);
    flex-shrink: 0;
    position: relative;
    z-index: 10;
  }

  .footer-container {
    max-width: 90rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 640px) {
    .footer-container {
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .footer-container {
      padding: 0 2rem;
    }
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--neutral-800);
  }

  @media (min-width: 640px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .footer-logo img {
    width: 20px;
    height: 20px;
    opacity: 0.6;
  }

  .footer-logo span {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 0.8125rem;
    color: var(--neutral-500);
  }

  .footer-copyright {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--neutral-600);
    letter-spacing: 0.02em;
  }
</style>
