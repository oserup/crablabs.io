---
// set props
const { href } = Astro.props;
---

<div class="mt-7 grid gap-3 w-full sm:inline-flex">
    <a
        class="py-4 px-6 inline-flex justify-center items-center gap-x-3 text-base font-bold rounded-2xl border-2 border-orange-300/60 dark:border-orange-600/60 bg-gradient-to-r from-white/95 to-orange-50/30 dark:from-slate-800/95 dark:to-orange-900/20 text-orange-700 dark:text-orange-300 hover:bg-gradient-to-r hover:from-orange-50 hover:to-orange-100/50 dark:hover:from-orange-900/30 dark:hover:to-orange-800/40 hover:border-orange-400/80 dark:hover:border-orange-500/80 hover:shadow-xl hover:scale-105 focus:outline-none disabled:opacity-50 disabled:pointer-events-none ring-orange-500 transition-all duration-500 focus-visible:ring shadow-lg backdrop-blur-sm"
        href={href}
    >
        <slot />
    </a>
</div>
