---
// set props
const { href } = Astro.props;
---

<div class="mt-7 grid gap-3 w-full sm:inline-flex">
    <a
        class="py-4 px-6 inline-flex justify-center items-center gap-x-3 text-base font-bold rounded-2xl border-2 border-orange-300/60 bg-gradient-to-r from-white/95 to-orange-50/30 text-orange-700 hover:bg-gradient-to-r hover:from-orange-50 hover:to-orange-100/50 hover:border-orange-400/80 hover:shadow-xl hover:scale-105 focus:outline-none disabled:opacity-50 disabled:pointer-events-none ring-orange-500 transition-all duration-500 focus-visible:ring shadow-lg"
        href={href}
    >
        <slot />
    </a>
</div>
