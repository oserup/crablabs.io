---
/**
 * Email/envelope icon for contact info
 */
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg';
  strokeWidth?: string;
}

const { class: className = '', size = 'md', strokeWidth = '1.5' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
};
---

