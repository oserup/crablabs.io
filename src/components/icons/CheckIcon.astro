---
/**
 * Checkmark icon for lists, success states
 */
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg';
  strokeWidth?: string;
}

const { class: className = '', size = 'md', strokeWidth = '2' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
};
---

<svg
  class={`${sizeClasses[size]} ${className}`}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
  aria-hidden="true"
>
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width={strokeWidth} d="M5 13l4 4L19 7"></path>
</svg>
