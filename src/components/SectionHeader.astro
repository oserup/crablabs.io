---
/**
 * SectionHeader - Consistent section header component
 * Used for section titles within pages
 */
interface Props {
  label: string;
  title: string;
  description?: string;
  centered?: boolean;
}

const {
  label,
  title,
  description,
  centered = false
} = Astro.props;
---

<div class:list={["mb-12", centered && "text-center"]}>
  <p class="text-sm font-mono text-brand-600 mb-2">{label}</p>
  <h2 class="text-3xl font-display font-semibold text-neutral-900 mb-4">{title}</h2>
  {description && (
    <p class:list={[
      "text-neutral-600",
      centered ? "max-w-xl mx-auto" : "max-w-xl"
    ]}>
      {description}
    </p>
  )}
</div>
