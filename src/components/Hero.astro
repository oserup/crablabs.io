---
import TraceAnimation from "../components/TraceAnimation.astro";
import Container from "./Container.astro";
import PrimaryArrowButton from "./buttons/PrimaryArrowButton.astro";
---

<!-- Hero -->
<Container>
	<!-- Grid -->
	<div class="grid md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center">
		<div>
			<h1
				class="mt-20 block text-3xl font-bold text-slate-800 sm:text-4xl lg:text-5xl lg:leading-tight dark:text-slate-100"
			>
				No Redesigns Required
			</h1>
			<p class="mt-6 text-xl text-slate-600 dark:text-slate-300 leading-relaxed">
				Senior engineers building compliant electronics for regulated environments.
			</p>
			
			<div class="mt-8">
				<PrimaryArrowButton href="https://cal.com/crablabsllc/consultation">Talk to an Engineer</PrimaryArrowButton>
			</div>
		</div>
		<div class="hidden md:block">
			<TraceAnimation />
		</div>
	</div>
	<!-- End Grid -->
</Container>
<!-- End Hero -->
