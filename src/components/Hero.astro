---
import TraceAnimation from "./TraceAnimation.astro";
import Container from "./Container.astro";
---

<section class="section-white pt-8 pb-12 md:pt-12 md:pb-16">
	<Container>
		<div class="grid md:grid-cols-2 gap-8 md:gap-12 xl:gap-20 md:items-center">
			<div>
				<h1 class="text-hero font-display font-light text-neutral-900 mb-6">
					Electronic devices from concept to production
				</h1>

				<p class="text-xl text-neutral-600 leading-relaxed font-light mb-8 max-w-xl">
					PCB design, embedded firmware, and compliance testing for medical, industrial, and scientific products.
				</p>

				<div class="flex flex-col sm:flex-row gap-4 mb-8">
					<a href="https://cal.com/crablabsllc/consultation" class="btn-brand btn-lg">
						Schedule a Consultation
						<svg class="icon-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18 6-6-6-6"></path>
						</svg>
					</a>
					<a href="/services" class="btn-secondary btn-lg">
						View Services
					</a>
				</div>

				<p class="text-sm text-neutral-500">
					5 senior engineers | 30+ years combined experience | Transparent pricing
				</p>
			</div>

			<div class="hidden md:block">
				<TraceAnimation />
			</div>
		</div>
	</Container>
</section>
