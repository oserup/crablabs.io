---
import TraceAnimation from "../components/TraceAnimation.astro";
import Container from "./Container.astro";
import PrimaryArrowButton from "./buttons/PrimaryArrowButton.astro";
import SecondaryArrowButton from "./buttons/SecondaryArrowButton.astro";
---

<!-- Hero -->
<Container>
	<!-- Grid -->
	<div class="grid md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center">
		<div>
			<h1
				class="mt-20 block text-3xl font-bold text-gray-800 sm:text-4xl lg:text-6xl lg:leading-tight dark:text-white"
			>
				Design. Build. Scale.
			</h1>
			<p class="mt-3 text-lg text-gray-800 dark:text-neutral-400">
				An engineering research and development that enables ideas to become fully realized products
			</p>
			<div class="mt-7 grid whitespace-nowrap gap-3 sm:inline-flex">
				<PrimaryArrowButton href="/contact">Get a Quote</PrimaryArrowButton>
				<SecondaryArrowButton href="/about">Learn More</SecondaryArrowButton>
				<!-- <SecondaryArrowButton href="https://blog.crablabs.io"> Our Blog</SecondaryArrowButton> -->
			</div>
		</div>
		<div class="hidden md:block">
			<TraceAnimation />
		</div>
	</div>
	<!-- End Grid -->
</Container>
<!-- End Hero -->
