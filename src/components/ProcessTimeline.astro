---
/**
 * ProcessTimeline - Display step-by-step process
 *
 * Props:
 * - steps: Array of process steps
 * - color?: Accent color for numbered circles
 */

interface Step {
  title: string;
  description: string;
  duration?: string; // e.g., "20 min", "1-2 days"
  deliverable?: string; // e.g., "Scoping document"
}

interface Props {
  steps: Step[];
  color?: 'brand' | 'blue' | 'green' | 'purple';
}

const { steps, color = 'brand' } = Astro.props;

const colorClasses = {
  brand: {
    circleBg: 'bg-brand-500',
    line: 'bg-brand-200',
  },
  blue: {
    circleBg: 'bg-blue-500',
    line: 'bg-blue-200',
  },
  green: {
    circleBg: 'bg-green-500',
    line: 'bg-green-200',
  },
  purple: {
    circleBg: 'bg-purple-500',
    line: 'bg-purple-200',
  },
};

const classes = colorClasses[color];
---

<div class="relative">
  <!-- Timeline line -->
  <div class={`absolute left-4 top-8 bottom-8 w-px ${classes.line}`}></div>

  <div class="space-y-8">
    {steps.map((step, index) => (
      <div class="relative flex gap-6">
        <div class={`w-8 h-8 rounded-full ${classes.circleBg} flex items-center justify-center flex-shrink-0 z-10`}>
          <span class="text-white font-mono text-sm font-bold">{index + 1}</span>
        </div>
        <div class="pt-1 flex-1">
          <div class="flex items-center gap-2 mb-1">
            <h3 class="font-semibold text-neutral-900">{step.title}</h3>
            {step.duration && (
              <span class="text-sm text-neutral-500 font-normal">({step.duration})</span>
            )}
          </div>
          <p class="text-neutral-600 text-sm mb-2">{step.description}</p>
          {step.deliverable && (
            <div class="inline-flex items-center gap-1.5 text-xs bg-neutral-100 text-neutral-600 px-2 py-1 rounded">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {step.deliverable}
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</div>
