---
/**
 * CheckmarkItem - Reusable list item with checkmark icon
 * Used in: services.astro (deliverables), about.astro (good fit criteria)
 */
interface Props {
  text: string;
  color?: 'brand' | 'green' | 'blue' | 'purple' | 'amber';
}

const { text, color = 'brand' } = Astro.props;

const colorClasses = {
  brand: 'text-brand-500',
  green: 'text-green-500',
  blue: 'text-blue-500',
  purple: 'text-purple-500',
  amber: 'text-amber-500',
};
---

<div class="flex items-center gap-2 text-neutral-700">
  <svg class={`w-5 h-5 flex-shrink-0 ${colorClasses[color]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
  </svg>
  <span>{text}</span>
</div>
