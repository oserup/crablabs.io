---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
---

<Layout
    title="Technical Capabilities | PCB Design & Embedded Systems | Test Equipment | Crab Labs"
    description="Complete technical capabilities for electronic product development. PCB design tools, test equipment, firmware development platforms, and compliance testing facilities."
>
    <div class="pt-16 bg-gray-50">
        <Container>
            <div class="max-w-6xl px-4 py-16 mx-auto">

                <!-- Hero Section -->
                <div class="text-center mb-16">
                    <h1 class="text-4xl font-light text-gray-900 sm:text-5xl lg:text-6xl lg:leading-tight tracking-tight">
                        Technical Capabilities
                    </h1>
                    <p class="mt-8 text-xl text-gray-600 leading-relaxed font-light max-w-3xl mx-auto">
                        Complete electronics development from concept to production. 1,000 sq ft lab in Long Beach, CA.
                    </p>
                </div>

                <!-- PCB Design & CAD -->
                <section class="relative mb-16">
                    <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                        <div class="max-w-5xl mx-auto">
                            <h2 class="text-4xl font-light text-gray-900 mb-12 text-center tracking-tight">PCB Design & CAD Tools</h2>

                            <div class="grid lg:grid-cols-2 gap-8">
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Design Software</h3>
                                    <div class="space-y-3">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Altium Designer</p>
                                                <p class="text-sm text-gray-600">Professional PCB design, up to 12 layers</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">KiCad</p>
                                                <p class="text-sm text-gray-600">Open-source PCB design</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Ansys SIwave</p>
                                                <p class="text-sm text-gray-600">Signal integrity simulation</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">LTSpice & NGSpice</p>
                                                <p class="text-sm text-gray-600">Circuit simulation</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Design Capabilities</h3>
                                    <div class="space-y-3">
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Digital Interfaces</p>
                                            <p class="text-sm text-gray-600">USB 2.0/3.0/3.2, Ethernet, SPI/I2C, UART</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Precision Analog</p>
                                            <p class="text-sm text-gray-600">High-resolution ADCs, low-noise amps, sensors</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Power Design</p>
                                            <p class="text-sm text-gray-600">Switching supplies, battery mgmt, motor control</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">RF Design</p>
                                            <p class="text-sm text-gray-600">Wireless integration, antenna matching</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Firmware Development -->
                <section class="relative mb-16">
                    <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                        <div class="max-w-5xl mx-auto">
                            <h2 class="text-4xl font-light text-gray-900 mb-12 text-center tracking-tight">Firmware Development</h2>

                            <div class="grid lg:grid-cols-2 gap-8">
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Development Services</h3>
                                    <div class="space-y-3">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Device Drivers</p>
                                                <p class="text-sm text-gray-600">Sensors, ADCs, displays, motor control</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Communication Protocols</p>
                                                <p class="text-sm text-gray-600">SPI, I2C, CAN, USB, custom bit-bang</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Bootloaders & Updates</p>
                                                <p class="text-sm text-gray-600">Custom bootloaders, OTA updates, secure boot</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Low-Power Design</p>
                                                <p class="text-sm text-gray-600">Sleep modes, wearables, battery optimization</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Wireless Integration</p>
                                                <p class="text-sm text-gray-600">Nordic BLE, WiFi, custom protocols</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Safety Systems</p>
                                                <p class="text-sm text-gray-600">Medical compliance, watchdogs, error handling</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Platform Expertise</h3>
                                    <div class="space-y-3">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">STM32 Ecosystem</p>
                                                <p class="text-sm text-gray-600">STM32L (low-power), STM32F series, HAL/LL drivers</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Microchip & TI Platforms</p>
                                                <p class="text-sm text-gray-600">PIC family, TI C2000/MSP series</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Wireless SoCs</p>
                                                <p class="text-sm text-gray-600">Nordic nRF54, Silicon Labs BGM</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">RISC-V Development</p>
                                                <p class="text-sm text-gray-600">ESP32 RISC-V, WCH, SiFive platforms</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">RTOS & Bare Metal</p>
                                                <p class="text-sm text-gray-600">FreeRTOS, Zephyr, optimized bare metal</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0"></div>
                                            <div>
                                                <p class="font-medium text-gray-700">Development Tools</p>
                                                <p class="text-sm text-gray-600">C/C++, Rust projects, J-Link, OpenOCD</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Test Equipment & Lab -->
                <section class="relative mb-16">
                    <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                        <div class="max-w-5xl mx-auto">
                            <h2 class="text-4xl font-light text-gray-900 mb-12 text-center tracking-tight">Test Equipment & Lab Facility</h2>

                            <div class="grid lg:grid-cols-2 gap-8 mb-8">
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Measurement Equipment</h3>
                                    <div class="space-y-3">
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Digital Oscilloscopes</p>
                                            <p class="text-sm text-gray-600">Up to 8 GHz bandwidth, 4-channel, protocol decode</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Spectrum Analyzer</p>
                                            <p class="text-sm text-gray-600">Up to 6 GHz, EMC pre-compliance, RF measurements</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Power Supplies & Loads</p>
                                            <p class="text-sm text-gray-600">Programmable DC supplies, electronic loads</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Vector Network Analyzer</p>
                                            <p class="text-sm text-gray-600">DC to 6 GHz, impedance matching, S-parameters</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Multimeters & Basic Tools</p>
                                            <p class="text-sm text-gray-600">Precision DMMs, LCR meters, function generators</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Environmental Testing</p>
                                            <p class="text-sm text-gray-600">Temperature chamber (0°C to +85°C), humidity control (0-90% RH)</p>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Assembly & Prototyping</h3>
                                    <div class="space-y-3">
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Pick & Place Machine</p>
                                            <p class="text-sm text-gray-600">Automated PnP, SMT assembly, 0402+ packages, vision system</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Reflow & Soldering</p>
                                            <p class="text-sm text-gray-600">Convection reflow, lead-free profiles, SMT rework</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Stencils & Solder Paste</p>
                                            <p class="text-sm text-gray-600">Laser-cut stencils, manual paste application</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Quality Control</p>
                                            <p class="text-sm text-gray-600">Custom ICT fixtures, functional testing</p>
                                        </div>
                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                            <p class="font-medium text-gray-700 mb-1">Component Library</p>
                                            <p class="text-sm text-gray-600">Common components, distributor partnerships</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900 mb-3">Lab Facility</h3>
                                <div class="grid md:grid-cols-2 gap-6 text-sm text-gray-600">
                                    <div>
                                        <p><strong>Size:</strong> 1,000 sq ft dedicated electronics lab</p>
                                        <p><strong>Location:</strong> Long Beach, CA</p>
                                        <p><strong>Environment:</strong> Climate controlled, ESD protected</p>
                                    </div>
                                    <div>
                                        <p><strong>Capabilities:</strong> PCB assembly, testing, validation</p>
                                        <p><strong>Certifications:</strong> IPC standards compliance (in progress)</p>
                                        <p><strong>Access:</strong> Direct client visits available</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Compliance & Standards -->
                <section class="relative mb-16">
                    <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                        <div class="max-w-5xl mx-auto">
                            <h2 class="text-4xl font-light text-gray-900 mb-12 text-center tracking-tight">Compliance & Standards</h2>

                            <!-- Pre-compliance Testing -->
                            <div class="bg-gray-50 rounded-xl p-6 mb-8 border border-gray-200">
                                <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">Pre-Compliance EMC/EMI Testing</h3>
                                <div class="grid md:grid-cols-2 gap-6">
                                    <div>
                                        <h4 class="font-medium text-gray-700 mb-2">Emissions Testing</h4>
                                        <ul class="space-y-1 text-sm text-gray-600">
                                            <li>• Radiated emissions measurement</li>
                                            <li>• Conducted emissions testing</li>
                                            <li>• Spurious emissions analysis</li>
                                        </ul>
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-gray-700 mb-2">Immunity & Safety</h4>
                                        <ul class="space-y-1 text-sm text-gray-600">
                                            <li>• ESD testing and protection</li>
                                            <li>• Conducted RF immunity testing</li>
                                            <li>• Radiated RF immunity testing</li>
                                            <li>• Power line disturbance testing</li>
                                            <li>• Design validation and optimization</li>
                                        </ul>
                                    </div>
                                </div>
                                <p class="text-sm text-gray-500 mt-4 text-center italic">
                                    Pre-compliance testing to identify issues early and reduce formal certification costs
                                </p>
                            </div>

                            <div class="grid lg:grid-cols-2 gap-8">
                                <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Medical Device Compliance</h3>
                                    <p class="text-sm text-gray-600 mb-4">Proven experience in biomedical electronics compliance</p>
                                    <ul class="space-y-2 text-sm text-gray-600">
                                        <li>• IEC 60601-1 electrical safety design</li>
                                        <li>• IEC 62304 medical device software lifecycle</li>
                                        <li>• ISO 13485 design controls (technical aspects)</li>
                                        <li>• Risk management integration</li>
                                        <li>• Safety-critical firmware development</li>
                                    </ul>
                                </div>

                                <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-4">EMC & Electronics Compliance</h3>
                                    <p class="text-sm text-gray-600 mb-4">Design and testing for regulatory approval</p>
                                    <ul class="space-y-2 text-sm text-gray-600">
                                        <li>• FCC Part 15 unintentional radiator compliance</li>
                                        <li>• Pre-compliance EMC/EMI testing (in-house)</li>
                                        <li>• Design for EMC from concept phase</li>
                                        <li>• PCB layout for compliance</li>
                                        <li>• Pre-certified module integration</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="bg-gray-50 rounded-xl p-6 mt-8 border border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900 mb-3">Our Compliance Approach</h3>
                                <div class="grid md:grid-cols-2 gap-6 text-sm text-gray-600">
                                    <div>
                                        <p><strong>Design Phase:</strong> Compliance considerations from initial concept</p>
                                        <p><strong>Pre-Testing:</strong> In-house EMC/EMI validation before formal testing</p>
                                    </div>
                                    <div>
                                        <p><strong>Documentation:</strong> Technical files and design documentation</p>
                                        <p><strong>Partner Network:</strong> Established relationships with certification labs</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Team & Experience -->
                <section class="relative mb-16">
                    <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                        <div class="max-w-4xl mx-auto text-center">
                            <h2 class="text-4xl font-light text-gray-900 mb-12 tracking-tight">Team & Experience</h2>

                            <div class="grid md:grid-cols-2 gap-8">
                                <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Engineering Team</h3>
                                    <div class="space-y-3 text-left">
                                        <p class="text-gray-600"><strong>Engineers:</strong> 4 EE/CS + 1 ME</p>
                                        <p class="text-gray-600"><strong>Experience:</strong> 15+ years average</p>
                                        <p class="text-gray-600"><strong>Industries:</strong> Medical devices, aerospace, industrial</p>
                                        <p class="text-gray-600"><strong>Founded:</strong> May 2024</p>
                                    </div>
                                </div>

                                <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Project Range</h3>
                                    <div class="space-y-3 text-left">
                                        <p class="text-gray-600"><strong>Typical Projects:</strong> $25k - $100k</p>
                                        <p class="text-gray-600"><strong>Complex Systems:</strong> $100k+ available</p>
                                        <p class="text-gray-600"><strong>Response Time:</strong> 1-2 weeks</p>
                                        <p class="text-gray-600"><strong>Service Area:</strong> Nationwide + Long Beach local</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Contact CTA -->
                <section class="relative">
                    <div class="bg-white rounded-2xl p-12 text-center shadow-sm border border-gray-100">
                        <h2 class="text-4xl font-light text-gray-900 mb-6 tracking-tight">Ready to Start Your Project?</h2>
                        <p class="text-lg text-gray-700 mb-8">
                            Talk directly with a senior engineer about your technical requirements.
                        </p>
                        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
                            <a href="/quote" class="px-12 py-4 bg-white border border-gray-300 text-gray-900 font-semibold rounded-full hover:bg-gray-50 hover:scale-[1.02] active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-gray-400 shadow-sm hover:shadow-md transition-all duration-200">
                                Get Project Quote
                            </a>
                            <a href="https://cal.com/crablabsllc/consultation" class="px-12 py-4 bg-gradient-to-r from-orange-600 to-orange-700 text-white font-semibold rounded-full hover:from-orange-700 hover:to-orange-800 hover:shadow-lg hover:scale-[1.02] active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-orange-400 shadow-md transition-all duration-200">
                                Schedule Consultation
                            </a>
                            <a href="tel:+14242715569" class="px-12 py-4 bg-white border border-gray-300 text-gray-900 font-semibold rounded-full hover:bg-gray-50 hover:scale-[1.02] active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-gray-400 shadow-sm hover:shadow-md transition-all duration-200">
                                Call (424) 271-5569
                            </a>
                        </div>
                        <p class="text-gray-500 text-sm">
                            Long Beach, CA • Response within 24 hours
                        </p>
                    </div>
                </section>

            </div>
        </Container>
    </div>
</Layout>