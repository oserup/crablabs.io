---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import PrimaryArrowButton from "../components/buttons/PrimaryArrowButton.astro";
---

<Layout
    title="Services | Electronic Product Development | Crab Labs"
    description="Electronic product development services. Design review, PCB design, firmware development, compliance testing. Direct engineer access."
>
    <div class="pt-16 bg-gray-50">
      <Container>
        <div class="max-w-6xl px-4 py-16 mx-auto">

            <!-- Hero Section -->
            <div class="text-center mb-16">
                <h1 class="text-4xl font-light text-gray-900 sm:text-5xl lg:text-6xl lg:leading-tight tracking-tight">
                    Our Services
                </h1>
                <p class="mt-8 text-xl text-gray-600 leading-relaxed font-light">
                    Engineering expertise when you need it most.
                </p>
            </div>

            <!-- Design Review & Consulting -->
            <section class="relative mb-16">
              <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                    <div class="text-center mb-8">
                        <h2 class="text-4xl font-light text-gray-900 mb-4 tracking-tight">Design Review & Consulting</h2>
                        <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                            Technical review of existing designs. Find problems before production.
                        </p>
                    </div>

                    <div class="grid lg:grid-cols-2 gap-8 mb-8">
                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-4">What We Review</h3>
                            <div class="space-y-3">
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">Circuit Analysis</p>
                                        <p class="text-sm text-gray-600">Schematic review, signal integrity, power distribution, thermal analysis</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">PCB Layout Review</p>
                                        <p class="text-sm text-gray-600">Layer stackup, routing, component placement, EMC considerations</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">Firmware Architecture</p>
                                        <p class="text-sm text-gray-600">Code structure, real-time performance, memory usage, safety systems</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">Component Selection</p>
                                        <p class="text-sm text-gray-600">Part lifecycle, cost optimization, supply chain risk assessment</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-4">Common Issues We Fix</h3>
                            <div class="space-y-3">
                                <div class="bg-white  rounded-lg p-4 border border-gray-200 ">
                                    <p class="font-medium text-gray-700 mb-1">EMC Test Failures</p>
                                    <p class="text-sm text-gray-600">Radiated emissions, conducted immunity, ESD protection issues</p>
                                </div>
                                <div class="bg-white  rounded-lg p-4 border border-gray-200 ">
                                    <p class="font-medium text-gray-700 mb-1">Performance Problems</p>
                                    <p class="text-sm text-gray-600">Timing issues, signal degradation, power consumption, thermal problems</p>
                                </div>
                                <div class="bg-white  rounded-lg p-4 border border-gray-200 ">
                                    <p class="font-medium text-gray-700 mb-1">Production Issues</p>
                                    <p class="text-sm text-gray-600">Yield problems, test failures, assembly difficulties, cost overruns</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <PrimaryArrowButton href="/quote?service=consulting">Get Expert Analysis</PrimaryArrowButton>
                    </div>
                </div>
            </div>

            <!-- Complete Product Development -->
            <section class="relative mb-16">
              <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                <div class="max-w-6xl mx-auto">
                    <div class="text-center mb-8">
                        <h2 class="text-4xl font-light text-gray-900 mb-4 text-center tracking-tight">Complete Product Development</h2>
                        <p class="text-lg text-gray-600 mb-12 leading-relaxed text-center">
                            From concept to production-ready hardware. Circuits, firmware, testing, documentation.
                        </p>
                    </div>

                    <div class="grid lg:grid-cols-3 gap-6 mb-8">
                        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <h3 class="text-xl font-semibold text-gray-900 mb-4">Phase 1: Requirements & Architecture</h3>
                            <ul class="space-y-2 text-sm text-gray-600">
                                <li>• Requirements analysis and specification</li>
                                <li>• System architecture design</li>
                                <li>• Technology selection and risk assessment</li>
                                <li>• Regulatory compliance planning</li>
                                <li>• Project timeline and milestones</li>
                            </ul>
                        </div>

                        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <h3 class="text-xl font-semibold text-gray-900 mb-4">Phase 2: Design & Development</h3>
                            <ul class="space-y-2 text-sm text-gray-600">
                                <li>• Schematic design and simulation</li>
                                <li>• PCB layout and signal integrity</li>
                                <li>• Firmware development and testing</li>
                                <li>• Prototype assembly and bring-up</li>
                                <li>• Initial validation testing</li>
                            </ul>
                        </div>

                        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <h3 class="text-xl font-semibold text-gray-900 mb-4">Phase 3: Validation & Production</h3>
                            <ul class="space-y-2 text-sm text-gray-600">
                                <li>• Design verification testing</li>
                                <li>• EMC and safety compliance</li>
                                <li>• Manufacturing documentation</li>
                                <li>• Production test procedures</li>
                                <li>• Supplier qualification support</li>
                            </ul>
                        </div>
                    </div>

                    <div class="bg-gradient-to-r from-orange-50 to-orange-100  rounded-xl p-6 border border-orange-200 mb-8">
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">What You Get</h3>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <h4 class="font-semibold text-gray-700 mb-2">Design Files</h4>
                                <ul class="text-sm text-gray-600 space-y-1">
                                    <li>• Complete schematics and PCB layouts</li>
                                    <li>• 3D models and mechanical drawings</li>
                                    <li>• Full source code and documentation</li>
                                    <li>• Bill of materials with suppliers</li>
                                </ul>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-700 mb-2">Production Support</h4>
                                <ul class="text-sm text-gray-600 space-y-1">
                                    <li>• Manufacturing assembly drawings</li>
                                    <li>• Test procedures and fixtures</li>
                                    <li>• Compliance documentation</li>
                                    <li>• Supplier contact information</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <PrimaryArrowButton href="/quote?service=product-development">Start Your Product</PrimaryArrowButton>
                    </div>
                </div>
            </section>

            <!-- Testing & Documentation -->
            <section class="relative mb-16">
              <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                <div class="max-w-6xl mx-auto">
                    <div class="text-center mb-8">
                        <h2 class="text-4xl font-light text-gray-900 mb-4 text-center tracking-tight">Testing & Documentation</h2>
                        <p class="text-lg text-gray-600 mb-12 leading-relaxed text-center">
                            Pre-compliance testing and documentation for regulatory submissions.
                        </p>
                    </div>

                    <div class="grid lg:grid-cols-2 gap-8 mb-8">
                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-4">Testing Services</h3>
                            <div class="space-y-3">
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">EMC Pre-compliance</p>
                                        <p class="text-sm text-gray-600">Conducted and radiated emissions, immunity testing</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">Safety Validation</p>
                                        <p class="text-sm text-gray-600">IEC 60601 medical device safety testing</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">Environmental Testing</p>
                                        <p class="text-sm text-gray-600">Temperature cycling, humidity, vibration tests</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="font-medium text-gray-700">Functional Testing</p>
                                        <p class="text-sm text-gray-600">Design verification, performance validation</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-4">Documentation</h3>
                            <div class="space-y-3">
                                <div class="bg-white  rounded-lg p-4 border border-gray-200 ">
                                    <p class="font-medium text-gray-700 mb-1">Test Reports</p>
                                    <p class="text-sm text-gray-600">Detailed results for regulatory submission</p>
                                </div>
                                <div class="bg-white  rounded-lg p-4 border border-gray-200 ">
                                    <p class="font-medium text-gray-700 mb-1">Risk Analysis</p>
                                    <p class="text-sm text-gray-600">ISO 14971 risk management documentation</p>
                                </div>
                                <div class="bg-white  rounded-lg p-4 border border-gray-200 ">
                                    <p class="font-medium text-gray-700 mb-1">Design Files</p>
                                    <p class="text-sm text-gray-600">Technical documentation package</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <PrimaryArrowButton href="/quote?service=testing-documentation">Get Compliance Support</PrimaryArrowButton>
                    </div>
                </div>
            </section>

            <!-- Pricing Section -->
            <section class="relative mb-16">
              <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                <div class="max-w-4xl mx-auto text-center">
                    <h2 class="text-4xl font-light text-gray-900 mb-4 text-center tracking-tight">Pricing</h2>
                    <p class="text-lg text-gray-600 mb-12 leading-relaxed text-center">
                        Fixed price, hourly, or retainer.
                    </p>
                    
                    <div class="grid gap-6 md:grid-cols-3">
                        <!-- Fixed Price -->
                        <div class="bg-gray-50  rounded-2xl p-6 border border-gray-200   group">
                            <h3 class="text-xl font-semibold text-gray-900 group-hover:text-orange-500  mb-3 transition-colors duration-300">Fixed Price</h3>
                            <div class="text-3xl font-black text-gray-900 group-hover:text-orange-500  mb-4 transition-colors duration-300">$2,500+</div>
                            <p class="text-gray-600  mb-3 leading-relaxed text-sm">
                                Quoted per project scope.
                            </p>
                            <p class="text-xs text-gray-500  leading-relaxed">Most common</p>
                        </div>

                        <!-- Hourly -->
                        <div class="bg-gray-50  rounded-2xl p-6 border border-orange-500  group">
                            <h3 class="text-xl font-semibold text-orange-600  group-hover:text-orange-700  mb-3 transition-colors duration-300">Hourly</h3>
                            <div class="text-3xl font-black text-orange-600  group-hover:text-orange-700  mb-4 transition-colors duration-300">$150/hr</div>
                            <p class="text-gray-600  mb-3 leading-relaxed text-sm">
                                Consulting and troubleshooting.
                            </p>
                            <p class="text-xs text-gray-500  leading-relaxed">Minimum 4 hours</p>
                        </div>

                        <!-- Retainers -->
                        <div class="bg-gray-50  rounded-2xl p-6 border border-gray-200   group">
                            <h3 class="text-xl font-semibold text-gray-900 group-hover:text-orange-500  mb-3 transition-colors duration-300">Retainers</h3>
                            <div class="text-3xl font-black text-gray-900 group-hover:text-orange-500  mb-4 transition-colors duration-300">Available</div>
                            <p class="text-gray-600  mb-3 leading-relaxed text-sm">
                                Ongoing support.
                            </p>
                            <p class="text-xs text-gray-500  leading-relaxed">Long-term projects</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Discounts Section -->
            <section class="relative mb-16">
              <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                <div class="max-w-6xl mx-auto">
                    <div class="text-center mb-12">
                        <h2 class="text-4xl font-light text-gray-900 mb-4 text-center tracking-tight">Discounts & Incentives</h2>
                        <p class="text-lg text-gray-600 leading-relaxed text-center">
                            We offer several ways to reduce project costs for qualifying clients.
                        </p>
                    </div>

                    <div class="grid lg:grid-cols-2 gap-8 mb-8">
                        <!-- Volume Discounts -->
                        <div class="bg-gray-50 rounded-xl p-8 border border-gray-200">
                            <h3 class="text-xl font-semibold text-gray-900 mb-6">Project Size Discounts</h3>
                            <div class="space-y-4">
                                <div class="flex justify-between items-center p-4 bg-white rounded-lg border border-gray-200">
                                    <div>
                                        <p class="font-medium text-gray-700">$25k - $50k projects</p>
                                        <p class="text-sm text-gray-500 ">Medium complexity projects</p>
                                    </div>
                                    <div class="text-xl font-semibold text-green-600 ">5% off</div>
                                </div>
                                <div class="flex justify-between items-center p-4 bg-white rounded-lg border border-gray-200">
                                    <div>
                                        <p class="font-medium text-gray-700">$50k - $100k projects</p>
                                        <p class="text-sm text-gray-500 ">Large development projects</p>
                                    </div>
                                    <div class="text-xl font-semibold text-green-600 ">8% off</div>
                                </div>
                                <div class="flex justify-between items-center p-4 bg-white  rounded-lg border border-green-200">
                                    <div>
                                        <p class="font-medium text-gray-700">$100k+ projects</p>
                                        <p class="text-sm text-gray-500 ">Multi-phase or complex systems</p>
                                    </div>
                                    <div class="text-xl font-semibold text-green-600 ">12% off</div>
                                </div>
                            </div>
                        </div>

                        <!-- Early Payment & Loyalty -->
                        <div class="bg-gray-50 rounded-xl p-8 border border-gray-200">
                            <h3 class="text-xl font-semibold text-gray-900 mb-6">Additional Savings</h3>
                            <div class="space-y-4">
                                <div class="p-4 bg-white rounded-lg border border-gray-200">
                                    <div class="flex justify-between items-center mb-2">
                                        <p class="font-medium text-gray-700">Early Payment</p>
                                        <div class="text-lg font-semibold text-blue-600 ">2% off</div>
                                    </div>
                                    <p class="text-sm text-gray-500 ">Payment within 10 days of invoice</p>
                                </div>
                                <div class="p-4 bg-white rounded-lg border border-gray-200">
                                    <div class="flex justify-between items-center mb-2">
                                        <p class="font-medium text-gray-700">Repeat Client</p>
                                        <div class="text-lg font-semibold text-blue-600 ">5% off</div>
                                    </div>
                                    <p class="text-sm text-gray-500 ">Second project within 12 months</p>
                                </div>
                                <div class="p-4 bg-white  rounded-lg border border-orange-200">
                                    <div class="flex justify-between items-center mb-2">
                                        <p class="font-medium text-gray-700">Startup Discount</p>
                                        <div class="text-lg font-semibold text-orange-600 ">15% off</div>
                                    </div>
                                    <p class="text-sm text-gray-500 ">Pre-revenue startups, first $15k only</p>
                                </div>
                                <div class="p-4 bg-white  rounded-lg border border-purple-200">
                                    <div class="flex justify-between items-center mb-2">
                                        <p class="font-medium text-gray-700">Academic/Non-profit</p>
                                        <div class="text-lg font-semibold text-purple-600 ">10% off</div>
                                    </div>
                                    <p class="text-sm text-gray-500 ">Universities and qualified non-profits</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Discount Terms -->
                    <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl p-6 border border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Discount Terms</h3>
                        <div class="grid md:grid-cols-2 gap-6 text-sm text-gray-600">
                            <div>
                                <ul class="space-y-2">
                                    <li>• Volume discounts apply to total project value</li>
                                    <li>• Early payment discount on individual invoices</li>
                                    <li>• Startup discount requires verification of funding status</li>
                                    <li>• Academic discount requires .edu email or documentation</li>
                                </ul>
                            </div>
                            <div>
                                <ul class="space-y-2">
                                    <li>• Discounts cannot be combined (highest applies)</li>
                                    <li>• Volume pricing determined at project start</li>
                                    <li>• Rush projects may have surcharges</li>
                                    <li>• Contact us for multi-year agreements</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Contact CTA -->
            <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl p-10 text-center text-white border border-orange-500 mt-16">
                <h2 class="text-4xl font-light mb-4 tracking-tight">Get Started</h2>
                <p class="text-lg mb-8 opacity-95">
                    Schedule a technical consultation.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6 max-w-md mx-auto">
                    <a href="/quote" class="w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-white to-gray-100 text-orange-600 font-semibold rounded-xl hover:from-gray-100 hover:to-white border border-orange-200">
                        Get Project Quote
                    </a>
                    <a href="tel:+14242715569" class="w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-orange-700 to-red-700 text-white font-semibold rounded-xl hover:from-red-700 hover:to-orange-700 border border-orange-600">
                        Call (424) 271-5569
                    </a>
                </div>
                <p class="text-sm opacity-90 bg-black/20 rounded-full px-4 py-2 inline-block">
                    Long Beach, CA • Response within 24 hours
                </p>
            </div>
        </div>
    </Container>
</Layout>