        <!-- Design Retooling Service -->
        <div class="group">
          <div class="bg-gradient-to-br from-white/95 to-emerald-50/50 dark:from-neutral-900/95 dark:to-emerald-950/40 backdrop-blur-sm border border-emerald-200/40 dark:border-emerald-800/40 rounded-3xl p-10 shadow-xl hover:shadow-2xl hover:scale-[1.03] hover:border-emerald-300/70 transition-all duration-500">
