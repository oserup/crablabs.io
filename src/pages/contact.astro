---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";

const email = "contact@crablabs.io";
const emailHref = "mailto:contact@crablabs.io";
const phone = "(424) 271-5569";
const phoneHref = "tel:+14242715569";
const address = ["235 E Broadway Ste 210", "Long Beach, CA, United States of America"];
---

<main id="content">
  <!-- Page Layout -->
  <Layout title="Contact Us">
    <Container>
      <!-- Contact -->
      <div class="pt-6 lg:pt-10">
        <div class="max-w-5xl px-4 xl:px-0 py-8 lg:py-16 mx-auto">
          <!-- Title -->
          <div class="max-w-3xl mb-8 lg:mb-12">
            <h1 class="text-3xl font-bold md:text-4xl dark:text-white">Let's Talk About Your Project</h1>
            <p class="mt-3 text-lg text-neutral-400">Tell us about your project. We'll give you an honest assessment of feasibility, timeline, and cost. If we're not the right fit, we'll connect you with someone who is.</p>
            
            <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <p class="text-sm text-blue-800 dark:text-blue-200 font-medium">Initial project assessment within 24 hours</p>
                  <p class="text-xs text-blue-700 dark:text-blue-300 mt-1">All project details kept strictly confidential under NDA</p>
                </div>
              </div>
            </div>
          </div>
          <!-- End Title -->

          <!-- Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-x-10 lg:gap-x-16">
            <div class="md:order-2 border-b border-neutral-800 pb-10 mb-10 md:border-b-0 md:pb-0 md:mb-0">

              <form action="https://usebasin.com/f/00c426b2708e" method="POST">
                <!-- Container for the label and email input field -->
                <div class="grid gap-4">
                  <!-- Input -->
                  <div>
                    <!-- Label for the name input field, visually hidden but accessible to screen readers -->
                    <label for="name" class="sr-only">Name</label>
                    <!-- Name input field -->
                    <input
                      type="text"
                      name="name"
                      id="name"
                      class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-none focus:ring focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1"
                      placeholder="Name"
                      required
                    />
                  </div>
                  <!-- End Input -->

                  <!-- Input -->
                  <div>
                    <!-- Label for the email input field, visually hidden but accessible to screen readers -->
                    <label for="email" class="sr-only">Email</label>
                    <!-- Email input field -->
                    <input
                      type="email"
                      name="email"
                      id="email"
                      autocomplete="email"
                      class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-none focus:ring focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1"
                      placeholder="Email"
                      required
                    />
                  </div>
                  <!-- End Input -->

                  <!-- Input -->
                  <div>
                    <!-- Label for the phone input field, visually hidden but accessible to screen readers -->
                    <label for="phone" class="sr-only">Phone</label>
                    <!-- Phone input field -->
                    <input
                      type="tel"
                      name="phone"
                      id="phone"
                      class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-none focus:ring focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1"
                      placeholder="Phone"
                    />
                  </div>
                  <!-- End Input -->

                  <!-- Service Type Dropdown -->
                  <div>
                    <label for="service-type" class="sr-only">Service Type</label>
                    <select
                      name="service-type"
                      id="service-type"
                      class="block w-full rounded-lg border border-neutral-200 bg-white px-4 py-3 text-sm text-neutral-900 focus:border-neutral-200 focus:outline-none focus:ring focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-800 dark:text-white dark:focus:ring-1"
                      required
                    >
                      <option value="" disabled selected>What service are you interested in?</option>
                      <option value="technical-consulting">Technical Consulting</option>
                      <option value="design-review">Design Review & Analysis</option>
                      <option value="product-development">New Product Development</option>
                      <option value="design-retooling">Design Retooling & Upgrades</option>
                      <option value="reverse-engineering">Reverse Engineering</option>
                      <option value="pre-compliance-testing">Pre-Compliance Testing</option>
                      <option value="multiple-services">Multiple Services</option>
                      <option value="not-sure">Not Sure / Need Guidance</option>
                    </select>
                  </div>
                  <!-- End Service Type Dropdown -->

                  <!-- Input -->

                  <div>
                    <label for="message" class="sr-only">Tell us more about your project</label>
                    <!-- prettier-ignore -->
                    <textarea
                      id="message"
                      name="message"
                      rows="4"
                      class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-none focus:ring focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1"
                      placeholder="Tell us more about your project"
                ></textarea>
                  </div>
                  <!-- End Input -->
                </div>

                <div class="mt-2 grid gap-6">
                  <p class="text-xs text-neutral-500">Name, email, service type, and message are required</p>
                  <button 
                    name="submit" 
                    class="py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-orange-600 text-white hover:bg-orange-700 disabled:opacity-50 disabled:pointer-events-none ring-zinc-500 transition duration-300 focus-visible:ring" 
                    type="submit">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                    </svg>
                    <b>Request Consultation</b>
                  </button>
                  <p class="text-xs text-neutral-500">Personal response from our engineering team within 4 hours</p>
                </div>
              </form>
      
              <script>
                // Auto-select service type based on URL parameter
                document.addEventListener('DOMContentLoaded', function() {
                  const urlParams = new URLSearchParams(window.location.search);
                  const serviceParam = urlParams.get('service');
                  
                  if (serviceParam) {
                    const serviceSelect = document.getElementById('service-type');
                    // Try to find and select the matching option
                    if (serviceSelect && serviceSelect instanceof HTMLSelectElement) {
                      for (let option of serviceSelect.options) {
                        if (option.value === serviceParam) {
                          option.selected = true;
                          break;
                        }
                      }
                    }
                  }
                });
              </script>
            </div>
            <!-- End Col -->

            <div class="space-y-14">
              <!-- Item -->
              <div class="flex gap-x-5">
                <svg
                  class="flex-shrink-0 size-6 text-neutral-500"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3">
                  </circle>
                </svg>
                <div class="grow">
                  <h4 class="text-white font-semibold">Our address</h4>

                  <address class="mt-1 text-neutral-400 text-sm not-italic">
                    {address[0]}
                    <br />
                    {address[1]}
                  </address>
                </div>
              </div>
              <!-- End Item -->

              <!-- Item -->
              <div class="flex gap-x-5">
                <svg
                  class="flex-shrink-0 size-6 text-neutral-500"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"
                  >
                  </path><path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"></path>
                </svg>
                <div class="grow">
                  <h4 class="text-white font-semibold">Email us</h4>

                  <a class="mt-1 text-neutral-400 text-sm" href={emailHref}>
                    {email}
                  </a>
                </div>
              </div>
              <!-- End Item -->

              <!-- Phone Item -->
              <div class="flex gap-x-5">
                <svg
                  class="flex-shrink-0 size-6 text-neutral-500"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                <div class="grow">
                  <h4 class="text-white font-semibold">Call or Text</h4>
                  <a class="mt-1 text-neutral-400 text-sm hover:text-orange-400 transition-colors" href={phoneHref}>
                    {phone}
                  </a>
                </div>
              </div>
              <!-- End Phone Item -->

              <div class="flex gap-x-5">
                <svg
                  class="flex-shrink-0 size-6 text-neutral-500"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <div class="grow">
                  <h4 class="text-white font-semibold">Schedule a Free Consultation</h4>
                  <p class="mt-1 text-neutral-400 text-sm">Let's discuss your project and how we can help.</p>
                  <p class="mt-2">
                    <a
                      class="group inline-flex items-center gap-x-2 font-medium text-sm text-orange-400 decoration-2 hover:underline focus:outline-none focus:underline"
                      href="https://cal.com/crablabsllc/consultation"
                    >
                      Book Now
                      <svg
                        class="flex-shrink-0 size-4 transition group-hover:translate-x-0.5 group-hover:translate-x-0 group-focus:translate-x-0.5 group-focus:translate-x-0"
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
                      </svg>
                    </a>
                  </p>
                </div>
              </div>
            </div>
            <!-- End Col -->
          </div>
          <!-- End Grid -->
        </div>
      </div>
      <!-- End Contact -->
    </Container>
  </Layout>
</main>
