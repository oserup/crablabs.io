---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import { company } from "../config/company";
---

<Layout
    title="Contact Crab Labs - Electronics Engineers Long Beach, CA"
    description="Talk to senior electronics engineers about your project. Same-day response, fixed-price quotes within 24 hours. Call +1-424-271-5569 or email contact@crablabs.io."
>
  <style>
    /* ==========================================
       CONTACT LAYOUT
       ========================================== */
    .contact-grid {
      display: grid;
      gap: 2rem;
    }

    @media (min-width: 768px) {
      .contact-grid {
        grid-template-columns: 1fr 1.5fr;
        gap: 3rem;
      }
    }

    /* ==========================================
       CONTACT INFO
       ========================================== */
    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .contact-item {
      display: flex;
      gap: 1rem;
      align-items: flex-start;
    }

    .contact-icon {
      width: 2.5rem;
      height: 2.5rem;
      background: rgba(234, 88, 12, 0.08);
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .contact-icon svg {
      width: 1.125rem;
      height: 1.125rem;
      color: var(--brand-600);
    }

    .contact-item-label {
      font-family: var(--font-mono);
      font-size: 0.625rem;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--neutral-400);
      margin-bottom: 0.25rem;
    }

    .contact-item-value {
      font-size: 0.875rem;
      color: var(--neutral-900);
      line-height: 1.5;
    }

    .contact-item-value a {
      color: var(--neutral-900);
      text-decoration: none;
      transition: color var(--transition-fast);
    }

    .contact-item-value a:hover {
      color: var(--brand-600);
    }
  </style>

  <!-- Page Header -->
  <section class="section section-gray section-first">
    <Container>
      <div class="section-header">
        <div class="section-label">Contact</div>
        <h1 class="section-title">Get in touch</h1>
        <p class="section-subtitle">Response same business day.</p>
      </div>
    </Container>
  </section>

  <!-- Contact Section -->
  <section class="section section-white">
    <Container>
      <div class="contact-grid">
        <!-- Contact Info -->
        <div class="contact-info">
          <div class="contact-item">
            <div class="contact-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <div class="contact-item-label">Address</div>
              <div class="contact-item-value">
                {company.address.street}<br/>
                {company.address.city}, {company.address.state} {company.address.zip}
              </div>
            </div>
          </div>

          <div class="contact-item">
            <div class="contact-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <div class="contact-item-label">Email</div>
              <div class="contact-item-value">
                <a href={company.contact.emailHref}>{company.contact.email}</a>
              </div>
            </div>
          </div>

          <div class="contact-item">
            <div class="contact-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <div class="contact-item-label">Phone</div>
              <div class="contact-item-value">
                <a href={company.contact.phoneHref}>{company.contact.phone}</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="form-card">
          <h2 class="form-title">Send a message</h2>
          <form
            action="https://usebasin.com/f/00c426b2708e"
            method="POST"
            data-form-handler='{"loadingText":"Sending...","successText":"Sent","defaultText":"Send Message"}'
          >
            <div class="form-grid">
              <div>
                <label for="name" class="form-label">Name *</label>
                <input type="text" name="name" id="name" class="form-input" placeholder="Your name" required />
              </div>

              <div>
                <label for="email" class="form-label">Email *</label>
                <input type="email" name="email" id="email" autocomplete="email" class="form-input" placeholder="you@company.com" required />
              </div>

              <div>
                <label for="phone" class="form-label">Phone (optional)</label>
                <input type="tel" name="phone" id="phone" class="form-input" placeholder="(555) 123-4567" />
              </div>

              <div>
                <label for="message" class="form-label">Message *</label>
                <textarea id="message" name="message" rows="5" class="form-textarea" placeholder="What are you building? What do you need help with?" required></textarea>
                <input type="hidden" name="source" value="contact-form" />
              </div>

              <button type="submit" class="form-submit">
                <span data-btn-text>Send Message</span>
                <svg data-btn-icon fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
                <svg data-spinner class="animate-spin hidden" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                </svg>
              </button>
            </div>

            <div data-success class="form-message form-message-success hidden">
              Message sent. We'll respond within one business day.
            </div>

            <div data-error class="form-message form-message-error hidden">
              Something went wrong. Email us directly at <a href="mailto:contact@crablabs.io">contact@crablabs.io</a>
            </div>
          </form>

          <div class="next-steps">
            <div class="next-steps-title">What happens next</div>
            <div class="next-steps-list">
              <div class="next-steps-item"><span class="next-steps-num">1.</span> We respond within one business day</div>
              <div class="next-steps-item"><span class="next-steps-num">2.</span> If it's a fit, we schedule a brief call</div>
              <div class="next-steps-item"><span class="next-steps-num">3.</span> You receive a fixed-price proposal</div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <script>
    import '../scripts/form-handler';
  </script>
</Layout>
