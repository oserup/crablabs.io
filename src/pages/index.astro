yo---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import TraceAnimation from "../components/TraceAnimation.astro";

const businessData = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Crab Labs",
  "description": "Electronics engineering consultancy. PCB design, embedded firmware, compliance testing for industrial, scientific, and medical products.",
  "url": "https://crablabs.io",
  "telephone": "+1-424-271-5569",
  "email": "contact@crablabs.io",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "235 E Broadway Ste 210",
    "addressLocality": "Long Beach",
    "addressRegion": "CA",
    "postalCode": "90803",
    "addressCountry": "US"
  }
};

// Testimonials for social proof
const testimonials = [
  {
    quote: "Crab Labs helped us refine and validate our product development process.",
    author: "Myles Ainley",
    title: "CEO",
    company: "Atm0s Research and Development",
    icon: "startup"
  }
];
---

<main id="content">
  <Layout title="Crab Labs - Electronics Engineering">
    <script type="application/ld+json" is:inline set:html={JSON.stringify(businessData)}></script>

    <!-- Hero -->
    <section class="bg-neutral-950 relative overflow-hidden">
      <Container>
        <div class="relative z-10 flex flex-col lg:flex-row items-center gap-8 lg:gap-16 py-16 lg:py-24">

          <!-- Left: Text content -->
          <div class="flex-1 max-w-xl">
            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-display font-semibold text-white mb-6 leading-[1.08] tracking-tight">
              Electronics from<br/>
              <span class="text-neutral-400">idea to production.</span>
            </h1>

            <p class="text-xl text-neutral-400 mb-8 max-w-lg">
              Hardware, firmware, pre-compliance testing.
            </p>

            <!-- Single primary CTA -->
            <div class="flex flex-col sm:flex-row sm:items-center gap-4 mb-8">
              <a href="https://cal.com/crablabsllc/consultation" class="btn-brand btn-lg inline-flex items-center justify-center gap-2">
                Book a call
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18 6-6-6-6"></path>
                </svg>
              </a>
              <p class="text-sm text-neutral-400">
                or <a href="/quote" class="text-brand-500 hover:text-brand-400 underline transition-colors">send project details</a>
              </p>
            </div>
          </div>

          <!-- Right: Trace animation -->
          <div class="flex-1 hidden lg:flex items-center justify-center">
            <div class="relative">
              <div class="absolute inset-0 bg-brand-500/5 blur-xl rounded-full scale-75"></div>
              <div class="relative">
                <TraceAnimation />
              </div>
            </div>
          </div>

        </div>
      </Container>
    </section>

    <!-- Services -->
    <section class="py-16 lg:py-24">
      <Container>
        <div class="flex flex-col lg:flex-row lg:items-start gap-10 lg:gap-16">
          <div class="lg:w-1/3 lg:sticky lg:top-24">
            <p class="text-sm font-mono text-brand-600 mb-2">Services</p>
            <h2 class="text-3xl lg:text-4xl font-display font-semibold text-neutral-900 mb-4">What we do</h2>
            <p class="text-neutral-600">
              Full-stack hardware development from schematic to shipping.
            </p>
          </div>

          <div class="lg:w-2/3">
            <a href="/services#product-development" class="group block py-6 border-b border-neutral-200 hover:bg-neutral-50 -mx-4 px-4 transition-colors first:border-t">
              <div class="flex items-start justify-between gap-6">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="w-2 h-2 rounded-full bg-brand-500"></span>
                    <h3 class="text-xl font-display font-semibold text-neutral-900 group-hover:text-brand-600 transition-colors">Product Development</h3>
                  </div>
                  <p class="text-neutral-600 text-sm ml-5">Schematic, layout, firmware, prototypes, manufacturing files. Concept to production.</p>
                </div>
                <div class="text-right flex-shrink-0">
                  <span class="font-mono text-neutral-400 text-sm">from $10k</span>
                  <svg class="w-5 h-5 text-neutral-300 group-hover:text-brand-500 group-hover:translate-x-1 transition-all mt-1 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18 6-6-6-6"></path>
                  </svg>
                </div>
              </div>
            </a>

            <a href="/services#design-review" class="group block py-6 border-b border-neutral-200 hover:bg-neutral-50 -mx-4 px-4 transition-colors">
              <div class="flex items-start justify-between gap-6">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="w-2 h-2 rounded-full bg-brand-500"></span>
                    <h3 class="text-xl font-display font-semibold text-neutral-900 group-hover:text-brand-600 transition-colors">Design Review</h3>
                  </div>
                  <p class="text-neutral-600 text-sm ml-5">Independent review of your schematic, layout, or firmware. Detailed report with fixes.</p>
                </div>
                <div class="text-right flex-shrink-0">
                  <span class="font-mono text-neutral-400 text-sm">from $1k</span>
                  <svg class="w-5 h-5 text-neutral-300 group-hover:text-brand-500 group-hover:translate-x-1 transition-all mt-1 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18 6-6-6-6"></path>
                  </svg>
                </div>
              </div>
            </a>

            <a href="/services#testing-compliance" class="group block py-6 border-b border-neutral-200 hover:bg-neutral-50 -mx-4 px-4 transition-colors">
              <div class="flex items-start justify-between gap-6">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="w-2 h-2 rounded-full bg-brand-500"></span>
                    <h3 class="text-xl font-display font-semibold text-neutral-900 group-hover:text-brand-600 transition-colors">Testing & Compliance</h3>
                  </div>
                  <p class="text-neutral-600 text-sm ml-5">EMC pre-compliance in our lab. Find problems before you pay for the real test.</p>
                </div>
                <div class="text-right flex-shrink-0">
                  <span class="font-mono text-neutral-400 text-sm">from $2.5k</span>
                  <svg class="w-5 h-5 text-neutral-300 group-hover:text-brand-500 group-hover:translate-x-1 transition-all mt-1 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18 6-6-6-6"></path>
                  </svg>
                </div>
              </div>
            </a>

            <a href="/services#team-augmentation" class="group block py-6 border-b border-neutral-200 hover:bg-neutral-50 -mx-4 px-4 transition-colors">
              <div class="flex items-start justify-between gap-6">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="w-2 h-2 rounded-full bg-brand-500"></span>
                    <h3 class="text-xl font-display font-semibold text-neutral-900 group-hover:text-brand-600 transition-colors">Team Augmentation</h3>
                  </div>
                  <p class="text-neutral-600 text-sm ml-5">Extra engineering capacity for a deadline. We work with your team, tools, and process.</p>
                </div>
                <div class="text-right flex-shrink-0">
                  <span class="font-mono text-neutral-400 text-sm">hourly</span>
                  <svg class="w-5 h-5 text-neutral-300 group-hover:text-brand-500 group-hover:translate-x-1 transition-all mt-1 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18 6-6-6-6"></path>
                  </svg>
                </div>
              </div>
            </a>
          </div>
        </div>
      </Container>
    </section>

    <!-- Industries -->
    <section class="py-16 lg:py-24 bg-neutral-50">
      <Container>
        <div class="mb-10">
          <p class="text-sm font-mono text-brand-600 mb-2">Industries</p>
          <h2 class="text-3xl lg:text-4xl font-display font-semibold text-neutral-900 mb-4">Who we work with</h2>
          <p class="text-neutral-600 max-w-2xl">Engineers and product teams building industrial, scientific, and medical devices.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-5">
          <!-- Industrial -->
          <div class="relative bg-white border border-neutral-200 rounded-lg p-6 overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-blue-600"></div>
            <div class="w-10 h-10 rounded-lg bg-blue-50 flex items-center justify-center mb-4">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 2v4m0 12v4M4 12h4m8 0h4"/>
                <circle cx="12" cy="12" r="3" stroke-width="1.8"/>
                <circle cx="12" cy="12" r="7" stroke-width="1.5" stroke-dasharray="2 2"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M15.5 8.5l2-2m-11 11l2-2m0-7l-2-2m11 11l2 2"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">Industrial</h3>
            <p class="text-neutral-600 text-sm mb-4">Motor control, robotics, sensors, automation systems.</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-blue-50 text-blue-700 text-xs font-mono rounded">IEC 61508</span>
              <span class="px-2 py-1 bg-blue-50 text-blue-700 text-xs font-mono rounded">UL 508A</span>
              <span class="px-2 py-1 bg-blue-50 text-blue-700 text-xs font-mono rounded">CE</span>
            </div>
          </div>

          <!-- Scientific -->
          <div class="relative bg-white border border-neutral-200 rounded-lg p-6 overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-purple-500 to-purple-600"></div>
            <div class="w-10 h-10 rounded-lg bg-purple-50 flex items-center justify-center mb-4">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">Scientific</h3>
            <p class="text-neutral-600 text-sm mb-4">Data acquisition, precision measurement, lab automation.</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-purple-50 text-purple-700 text-xs font-mono rounded">IEC 61010</span>
              <span class="px-2 py-1 bg-purple-50 text-purple-700 text-xs font-mono rounded">ISO 17025</span>
            </div>
          </div>

          <!-- Medical -->
          <div class="relative bg-white border border-neutral-200 rounded-lg p-6 overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-red-500 to-red-600"></div>
            <div class="w-10 h-10 rounded-lg bg-red-50 flex items-center justify-center mb-4">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">Medical</h3>
            <p class="text-neutral-600 text-sm mb-4">Class I-II devices. Patient monitors, diagnostics, wearables. Design for compliance from day one.</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-red-50 text-red-700 text-xs font-mono rounded">IEC 60601 design</span>
              <span class="px-2 py-1 bg-red-50 text-red-700 text-xs font-mono rounded">IEC 62304</span>
            </div>
          </div>
        </div>

        <!-- Social proof line -->
        <div class="mt-10 pt-6 border-t border-neutral-200">
          <a href="/case-studies" class="text-sm text-brand-600 hover:text-brand-700 transition-colors flex items-center gap-1">
            See case studies
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18 6-6-6-6"></path>
            </svg>
          </a>
        </div>
      </Container>
    </section>

    <!-- Pricing -->
    <section class="py-16 lg:py-24 bg-neutral-950">
      <Container>
        <div class="grid lg:grid-cols-[1fr,360px] gap-12 lg:gap-16 items-start">
          <div>
            <p class="text-sm font-mono text-brand-500 mb-2">Pricing</p>
            <h2 class="text-3xl lg:text-4xl font-display font-semibold text-white mb-4">Transparent rates</h2>
            <p class="text-neutral-400 mb-6">
              Time and materials. Detailed logs with every invoice. No surprises.
            </p>

            <div class="space-y-3">
              <div class="flex items-center gap-3 text-neutral-400 text-sm">
                <svg class="w-4 h-4 text-brand-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Fixed-price available for defined scopes</span>
              </div>
              <div class="flex items-center gap-3 text-neutral-400 text-sm">
                <svg class="w-4 h-4 text-brand-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Materials billed at cost + 10%</span>
              </div>
              <div class="flex items-center gap-3 text-neutral-400 text-sm">
                <svg class="w-4 h-4 text-brand-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>You own all IP from day one</span>
              </div>
            </div>
          </div>

          <div class="bg-neutral-900 text-white rounded-xl p-6 border border-neutral-800">
            <div class="text-center mb-6">
              <p class="text-neutral-500 text-xs uppercase tracking-wider mb-1">Standard Rate</p>
              <div class="text-4xl font-bold font-mono">$150<span class="text-xl text-neutral-500">/hr</span></div>
            </div>

            <div class="space-y-0 mb-6 text-sm">
              <div class="flex justify-between items-center py-2.5 border-b border-neutral-700">
                <span class="text-neutral-400">Startups & academia</span>
                <span class="font-mono font-semibold text-white">$135/hr</span>
              </div>
              <div class="flex justify-between items-center py-2.5 border-b border-neutral-700">
                <span class="text-neutral-400">Non-profits</span>
                <span class="font-mono font-semibold text-white">$140/hr</span>
              </div>
              <div class="flex justify-between items-center py-2.5">
                <span class="text-neutral-400">Rush (+50%)</span>
                <span class="font-mono font-semibold text-brand-500">$225/hr</span>
              </div>
            </div>

            <a href="/quote" class="block w-full text-center py-2.5 px-6 bg-brand-600 hover:bg-brand-700 text-white text-sm font-medium rounded-lg transition-colors">
              Get a quote
            </a>
          </div>
        </div>
      </Container>
    </section>

    <!-- Process -->
    <section class="py-16 lg:py-24 bg-neutral-50">
      <Container>
        <div class="mb-10 max-w-2xl">
          <p class="text-sm font-mono text-brand-600 mb-2">Process</p>
          <h2 class="text-3xl lg:text-4xl font-display font-semibold text-neutral-900 mb-4">How it works</h2>
        </div>

        <div class="grid md:grid-cols-4 gap-6 relative">
          <!-- Connecting line -->
          <div class="hidden md:block absolute top-6 left-[12.5%] right-[12.5%] h-px bg-neutral-300"></div>

          <div class="relative">
            <div class="w-12 h-12 rounded-full bg-brand-600 text-white flex items-center justify-center text-lg font-bold mb-4 relative z-10 shadow-sm">1</div>
            <h3 class="font-semibold text-neutral-900 mb-1">Call</h3>
            <p class="text-neutral-600 text-sm">20 minutes with an engineer. Tell us what you're building.</p>
          </div>

          <div class="relative">
            <div class="w-12 h-12 rounded-full bg-white border-2 border-neutral-300 text-neutral-600 flex items-center justify-center text-lg font-bold mb-4 relative z-10">2</div>
            <h3 class="font-semibold text-neutral-900 mb-1">Proposal</h3>
            <p class="text-neutral-600 text-sm">Scope, timeline, and estimate within 48 hours.</p>
          </div>

          <div class="relative">
            <div class="w-12 h-12 rounded-full bg-white border-2 border-neutral-300 text-neutral-600 flex items-center justify-center text-lg font-bold mb-4 relative z-10">3</div>
            <h3 class="font-semibold text-neutral-900 mb-1">Build</h3>
            <p class="text-neutral-600 text-sm">Weekly updates. Questions answered same-day.</p>
          </div>

          <div class="relative">
            <div class="w-12 h-12 rounded-full bg-white border-2 border-neutral-300 text-neutral-600 flex items-center justify-center text-lg font-bold mb-4 relative z-10">4</div>
            <h3 class="font-semibold text-neutral-900 mb-1">Deliver</h3>
            <p class="text-neutral-600 text-sm">Full handoff. 30 days support included.</p>
          </div>
        </div>
      </Container>
    </section>

    <!-- Testimonials -->
    <section class="py-16 lg:py-24 bg-neutral-950">
      <Container>
        <div class="mb-10">
          <p class="text-sm font-mono text-brand-500 mb-2">Client feedback</p>
          <h2 class="text-3xl lg:text-4xl font-display font-semibold text-white mb-4">What clients say</h2>
        </div>

        <div class="max-w-2xl">
          {testimonials.map((testimonial) => (
            <div class="bg-neutral-900 border border-neutral-800 rounded-lg p-8">
              <div class="flex items-center gap-2 mb-4">
                <svg class="w-5 h-5 text-brand-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                </svg>
              </div>
              <blockquote class="text-neutral-300 mb-6 leading-relaxed">
                {testimonial.quote}
              </blockquote>
              <div class="flex items-center gap-3 pt-4 border-t border-neutral-800">
                <div class="w-10 h-10 rounded-full bg-neutral-800 flex items-center justify-center">
                  {testimonial.icon === "medical" && (
                    <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"></path>
                    </svg>
                  )}
                  {testimonial.icon === "startup" && (
                    <svg class="w-5 h-5 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                  )}
                  {testimonial.icon === "scientific" && (
                    <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5"></path>
                    </svg>
                  )}
                </div>
                <div>
                  {testimonial.author ? (
                    <>
                      <div class="text-sm font-medium text-white">{testimonial.author}</div>
                      <div class="text-xs text-neutral-500">{testimonial.title}, {testimonial.company}</div>
                    </>
                  ) : (
                    <>
                      <div class="text-sm font-medium text-white">{testimonial.title}</div>
                      <div class="text-xs text-neutral-500">{testimonial.company}</div>
                    </>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </Container>
    </section>

  </Layout>
</main>
