---
// components
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import { Image } from "astro:assets";

// icons
import engineering from "../assets/icons/engineering.svg";
import electrical from "../assets/icons/electrical.svg"
import software from "../assets/icons/code.svg";
import manufacturing from "../assets/icons/manufacturing.svg";

// Structured data for SEO - Medical Device Engineering Focus
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Crab Labs",
  "description": "Custom engineering services for electronics design, embedded systems, software development, and product testing. Serving medical devices, industrial automation, robotics, IoT, and consumer electronics industries.",
  "url": "https://crablabs.io",
  "telephone": "+1-424-271-5569",
  "email": "contact@crablabs.io",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "235 E Broadway Ste 210",
    "addressLocality": "Long Beach",
    "addressRegion": "CA",
    "postalCode": "90803",
    "addressCountry": "US"
  },
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  },
  "serviceType": [
    "Electronics Design",
    "Embedded Systems Development",
    "Software Development", 
    "Circuit Design and PCB Layout",
    "Firmware Development",
    "Product Testing and Validation",
    "System Integration",
    "Engineering Consulting",
    "Prototype Development",
    "Motor Control Systems",
    "Power Electronics",
    "IoT Solutions",
    "Industrial Automation",
    "Medical Device Engineering",
    "Robotics Engineering"
  ],
  "industry": "Engineering Services",
  "foundingDate": "2024",
  "hasCredential": [
    "FDA Design Controls Experience",
    "IEC 62304 Compliance Expertise",
    "ISO 13485 Quality Management",
    "Medical Device Validation Testing"
  ],
  "sameAs": [
    "https://crablabs.io"
  ]
};
---

<!-- ========== MAIN CONTENT ========== -->
<main id="content">
  <!-- Page Layout -->
  <Layout title="Custom Engineering Services | Electronics Design, Embedded Systems & Software Development | USA">
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
    <Hero />
    <Container>
      
      <!-- What We Do -->
      <div class="py-16 text-center">
        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-4">
          Engineering Solutions
        </h2>
        
        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto mb-16">
          <div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700">
            <Image src={electrical} alt="Medical Device Electronics Design FDA Compliant" format={"svg"} class="w-12 h-12 mx-auto mb-3" />
            <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-2">Electronics Design</h3>
            <p class="text-gray-600 dark:text-neutral-400 text-sm mb-3">
              Custom circuit design and PCB development for specialized applications.
            </p>
            <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
              <li>• Analog & digital circuit design</li>
              <li>• Multi-layer PCB layout</li>
              <li>• Power supply design</li>
              <li>• Signal integrity optimization</li>
            </ul>
          </div>
          
          <div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700">
            <Image src={software} alt="IEC 62304 Medical Device Software Development" format={"svg"} class="w-12 h-12 mx-auto mb-3" />
            <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-2">Software Engineering</h3>
            <p class="text-gray-600 dark:text-neutral-400 text-sm mb-3">
              Custom software development, firmware, real-time systems, and safety-critical applications.
            </p>
            <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
              <li>• Embedded firmware development</li>
              <li>• Real-time control software</li>
              <li>• Desktop and web applications</li>
              <li>• Safety-critical software design</li>
            </ul>
          </div>
          
          <div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700">
            <Image src={engineering} alt="Medical Device Validation Testing FDA Compliance" format={"svg"} class="w-12 h-12 mx-auto mb-3" />
            <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-2">Testing & Validation</h3>
            <p class="text-gray-600 dark:text-neutral-400 text-sm mb-3">
              Comprehensive testing to ensure systems meet specifications and regulatory requirements.
            </p>
            <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
              <li>• Design verification & validation</li>
              <li>• Environmental testing</li>
              <li>• EMC/EMI compliance testing</li>
              <li>• Standards compliance verification</li>
            </ul>
          </div>
          
          <div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700">
            <Image src={manufacturing} alt="Medical Device Embedded Systems Development" format={"svg"} class="w-12 h-12 mx-auto mb-3" />
            <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-2">System Integration</h3>
            <p class="text-gray-600 dark:text-neutral-400 text-sm mb-3">
              Complete system design integrating hardware, software, and mechanical components.
            </p>
            <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
              <li>• Hardware-software co-design</li>
              <li>• System architecture</li>
              <li>• Performance optimization</li>
              <li>• Manufacturing transition</li>
            </ul>
          </div>
        </div>

        <!-- Project Examples -->
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8 mb-12">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-8 text-center">
            Recent Project Highlights
          </h3>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 shadow-sm">
              <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-2">Industrial Power Distribution Controller</h4>
              <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">Real-time monitoring and control system for low-voltage distribution networks (≤600V). Features redundant safety systems and compliance with IEC 61850 standards.</p>
              <div class="flex flex-wrap gap-1">
                <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded text-xs">Industrial</span>
                <span class="px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200 rounded text-xs">IEC 61850</span>
              </div>
            </div>
            <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 shadow-sm">
              <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-2">Medical Diagnostic Robot Controller</h4>
              <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">5-axis precision positioning system with sub-millimeter accuracy. Integrated safety monitoring and FDA design control documentation.</p>
              <div class="flex flex-wrap gap-1">
                <span class="px-2 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-200 rounded text-xs">Medical</span>
                <span class="px-2 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-200 rounded text-xs">FDA Controls</span>
              </div>
            </div>
            <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 shadow-sm">
              <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-2">High-Efficiency GaN Motor Driver</h4>
              <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">72V GaN-based three-phase motor controller achieving 98% efficiency. Custom controllers and drivers with field-oriented control algorithms for precision robotics.</p>
              <div class="flex flex-wrap gap-1">
                <span class="px-2 py-1 bg-teal-100 dark:bg-teal-900/30 text-teal-800 dark:text-teal-200 rounded text-xs">GaN Technology</span>
                <span class="px-2 py-1 bg-pink-100 dark:bg-pink-900/30 text-pink-800 dark:text-pink-200 rounded text-xs">98% Efficiency</span>
              </div>
            </div>
          </div>
        </div>


      </div>

      <!-- Industry Focus -->
      <div class="py-16 bg-gray-50 dark:bg-neutral-800">
        <div class="max-w-6xl mx-auto text-center px-4">
          <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-12">
            Industry Focus
          </h2>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-gray-200 dark:border-neutral-700">
              <div class="w-10 h-10 bg-red-100 dark:bg-red-900/30 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <h3 class="font-bold text-gray-800 dark:text-white mb-2">Medical Devices</h3>
              <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">Electronics design following FDA Design Controls and IEC 62304 practices for Class I-III devices</p>
              <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
                <li>• Diagnostic equipment</li>
                <li>• Patient monitoring systems</li>
                <li>• Surgical robotics</li>
              </ul>
            </div>
            <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-gray-200 dark:border-neutral-700">
              <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <h3 class="font-bold text-gray-800 dark:text-white mb-2">Robotics & Automation</h3>
              <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">Robotics control systems, motor drives, and industrial automation solutions</p>
              <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
                <li>• Precision robotic controllers</li>
                <li>• High-efficiency motor drives</li>
                <li>• Industrial automation systems</li>
              </ul>
            </div>
            <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-gray-200 dark:border-neutral-700">
              <div class="w-10 h-10 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <h3 class="font-bold text-gray-800 dark:text-white mb-2">Scientific Instruments</h3>
              <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">Precision measurement, data acquisition, and laboratory automation</p>
              <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
                <li>• High-precision sensors</li>
                <li>• Data acquisition systems</li>
                <li>• Automated test equipment</li>
              </ul>
            </div>
            <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-gray-200 dark:border-neutral-700">
              <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
              </div>
              <h3 class="font-bold text-gray-800 dark:text-white mb-2">Consumer Electronics</h3>
              <p class="text-sm text-gray-600 dark:text-neutral-400 mb-3">FCC/CE compliance, IoT development, wireless connectivity</p>
              <ul class="space-y-1 text-xs text-gray-500 dark:text-neutral-500">
                <li>• Connected devices</li>
                <li>• Wearable technology</li>
                <li>• Smart home systems</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="py-16 text-center">
        <div class="max-w-2xl mx-auto">
          <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
            Project Discussion
          </h2>
          <p class="text-gray-600 dark:text-neutral-400 mb-8">
            Technical assessment and feasibility analysis for complex engineering projects.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/quote" class="px-8 py-4 bg-orange-600 text-white font-semibold rounded-lg hover:bg-orange-700 transition-colors">
              Request Assessment
            </a>
            <a href="/services" class="px-8 py-4 border border-gray-300 text-gray-700 dark:text-neutral-300 dark:border-neutral-600 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-neutral-700 transition-colors">
              View Services
            </a>
          </div>
        </div>
      </div>
      </div>

    </Container>
  </Layout>
</main>