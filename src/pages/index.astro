---
// components
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import { Image } from "astro:assets";

// icons
import engineering from "../assets/icons/engineering.svg";
import electrical from "../assets/icons/electrical.svg"
import software from "../assets/icons/code.svg";
import manufacturing from "../assets/icons/manufacturing.svg";

// Structured data for SEO - Medical Device Engineering Focus
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Crab Labs",
  "description": "Custom engineering services for electronics design, embedded systems, software development, and product testing. Serving medical devices, industrial automation, robotics, IoT, and consumer electronics industries.",
  "url": "https://crablabs.io",
  "telephone": "+1-424-271-5569",
  "email": "contact@crablabs.io",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "235 E Broadway Ste 210",
    "addressLocality": "Long Beach",
    "addressRegion": "CA",
    "postalCode": "90803",
    "addressCountry": "US"
  },
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  },
  "serviceType": [
    "Electronics Design",
    "Embedded Systems Development",
    "Software Development", 
    "Circuit Design and PCB Layout",
    "Firmware Development",
    "Product Testing and Validation",
    "System Integration",
    "Engineering Consulting",
    "Prototype Development",
    "Motor Control Systems",
    "Power Electronics",
    "IoT Solutions",
    "Industrial Automation",
    "Medical Device Engineering",
    "Robotics Engineering"
  ],
  "industry": "Engineering Services",
  "foundingDate": "2024",
  "hasCredential": [
    "FDA Design Controls Experience",
    "IEC 62304 Compliance Expertise",
    "ISO 13485 Quality Management",
    "Medical Device Validation Testing"
  ],
  "sameAs": [
    "https://crablabs.io"
  ]
};
---

<!-- ========== MAIN CONTENT ========== -->
<main id="content">
  <!-- Page Layout -->
  <Layout title="Custom Engineering Services | Electronics Design, Embedded Systems & Software Development | USA">
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
    <Hero />
    <Container>
      
      <!-- What We Do -->
      <div class="py-20 text-center">
        <h2 class="text-4xl font-bold bg-gradient-to-r from-slate-800 to-slate-600 dark:from-slate-100 dark:to-slate-300 bg-clip-text text-transparent mb-16">Our Core Services</h2>
        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto mb-20">
          <div class="group bg-gradient-to-br from-white/95 to-orange-50/50 dark:from-neutral-900/95 dark:to-orange-950/40 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-orange-200/40 dark:border-orange-800/40 hover:shadow-2xl hover:scale-[1.05] hover:border-orange-300/70 transition-all duration-500">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-500/15 to-orange-600/35 dark:from-orange-400/25 dark:to-orange-500/45 rounded-2xl flex items-center justify-center mx-auto mb-6 ring-2 ring-orange-200/50 dark:ring-orange-700/50 group-hover:ring-orange-300/70 group-hover:scale-110 transition-all duration-500 shadow-lg">
              <Image src={electrical} alt="Medical Device Electronics Design FDA Compliant" format={"svg"} class="w-8 h-8 text-orange-600 dark:text-orange-400 group-hover:text-orange-500 dark:group-hover:text-orange-300 transition-colors duration-300" />
