---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";

const phone = "(424) 271-5569";
const phoneHref = "tel:+14242715569";
---

<Layout title="Get a Quote | Crab Labs"
    description="Fixed-price quotes for PCB design & firmware. Senior engineers. Projects $1k-$100k. Response < 24h."
>
    <div class="page-container">
      <Container>
        <div class="py-16 lg:py-24">

            <!-- Header -->
            <section class="max-w-4xl mx-auto text-center mb-12">
              <p class="text-sm font-mono text-brand-600 mb-2">Quote</p>
              <h1 class="text-4xl sm:text-5xl font-display font-semibold text-neutral-900 mb-4">Get a Quote</h1>
              <p class="text-lg text-neutral-600 max-w-xl mx-auto">
                Fixed-price quotes within 24 hours. You own all IP from day one.
              </p>
            </section>

            <!-- Form -->
            <section class="max-w-2xl mx-auto">
              <div class="bg-white border border-neutral-200 rounded-lg p-6 md:p-8">
                <form action="https://usebasin.com/f/00c426b2708e" method="POST">

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div>
                      <label for="company" class="block text-sm font-medium text-neutral-700 mb-1">Company *</label>
                      <input
                        type="text"
                        name="company"
                        id="company"
                        class="w-full px-4 py-2.5 border border-neutral-300 rounded-lg text-sm focus:border-brand-500 focus:ring-1 focus:ring-brand-500"
                        required
                      />
                    </div>

                    <div>
                      <label for="email" class="block text-sm font-medium text-neutral-700 mb-1">Email *</label>
                      <input
                        type="email"
                        name="email"
                        id="email"
                        class="w-full px-4 py-2.5 border border-neutral-300 rounded-lg text-sm focus:border-brand-500 focus:ring-1 focus:ring-brand-500"
                        required
                      />
                    </div>
                  </div>

                  <div class="mb-6">
                    <label for="project-description" class="block text-sm font-medium text-neutral-700 mb-1">What are you building? *</label>
                    <textarea
                      name="project-description"
                      id="project-description"
                      rows="5"
                      class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:border-brand-500 focus:ring-1 focus:ring-brand-500 resize-none"
                      placeholder="Describe your project: function, requirements, compliance needs, timeline..."
                      required
                    ></textarea>
                    <p class="text-xs text-neutral-500 mt-1">Include budget range and timeline if known - helps us respond faster</p>
                  </div>

                  <div class="mb-6">
                    <label for="budget" class="block text-sm font-medium text-neutral-700 mb-1">Budget Range (Optional)</label>
                    <select name="budget" id="budget" class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:border-brand-500 focus:ring-1 focus:ring-brand-500">
                      <option value="">Prefer to discuss</option>
                      <option value="under-5k">Under $5k</option>
                      <option value="5k-10k">$5k - $10k</option>
                      <option value="10k-25k">$10k - $25k</option>
                      <option value="25k-50k">$25k - $50k</option>
                      <option value="50k-100k">$50k - $100k</option>
                      <option value="over-100k">$100k+</option>
                    </select>
                  </div>

                  <input type="hidden" name="project-type" id="project-type" value="">
                  <input type="hidden" name="industry" id="industry" value="">

                  <div class="pt-4 border-t border-neutral-200">
                    <button type="submit" class="btn-brand btn-lg w-full">
                      Submit Request
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m9 18 6-6-6-6"></path>
                      </svg>
                    </button>
                  </div>
                </form>
              </div>

              <!-- Response commitment -->
              <div class="mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  </svg>
                  <div class="text-sm">
                    <p class="font-medium text-green-800 mb-1">What happens next:</p>
                    <ul class="text-green-700 space-y-1">
                      <li>1. We review your request within 4 hours</li>
                      <li>2. If it's a fit, we schedule a brief call to clarify scope</li>
                      <li>3. You receive a fixed-price proposal within 48 hours</li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Additional context -->
              <div class="mt-6 text-center text-sm text-neutral-500">
                <p>Prefer to talk first? <a href="https://cal.com/crablabsllc/consultation" class="text-brand-600 hover:underline">Schedule a call</a> or phone <a href={phoneHref} class="text-brand-600 hover:underline">{phone}</a></p>
              </div>

              <!-- Trust signals -->
              <div class="mt-8 pt-6 border-t border-neutral-200">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center text-xs text-neutral-500">
                  <div>
                    <div class="font-mono text-lg text-neutral-900 mb-1">100%</div>
                    <div>IP Ownership</div>
                  </div>
                  <div>
                    <div class="font-mono text-lg text-neutral-900 mb-1">30 days</div>
                    <div>Post-delivery Support</div>
                  </div>
                  <div>
                    <div class="font-mono text-lg text-neutral-900 mb-1">48h</div>
                    <div>Quote Turnaround</div>
                  </div>
                  <div>
                    <div class="font-mono text-lg text-neutral-900 mb-1">NDA</div>
                    <div>Before Discussion</div>
                  </div>
                </div>
              </div>
            </section>
        </div>
      </Container>
    </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const service = urlParams.get('service');
    const industry = urlParams.get('industry');

    if (service) {
      const el = document.getElementById('project-type');
      if (el) el.value = service;
    }
    if (industry) {
      const el = document.getElementById('industry');
      if (el) el.value = industry;
    }
  });
</script>
