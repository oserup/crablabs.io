---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";

const email = "contact@crablabs.io";
const emailHref = "mailto:contact@crablabs.io";
const phone = "(424) 271-5569";
const phoneHref = "tel:+14242715569";
---

<main id="content">
  <!-- Page Layout -->
  <Layout title="Get a Quote | Crab Labs">
    <Container>
      <div class="max-w-6xl px-4 pt-16 pb-12 mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-16">
          <h1 class="text-5xl font-bold text-slate-800 dark:text-slate-100 mb-16">Request Quote</h1>
        </div>

        <!-- RFQ Form -->
        <div class="bg-white dark:bg-slate-900 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500">
            <form action="https://usebasin.com/f/00c426b2708e" method="POST">
              
              <!-- Company & Contact Information -->
              <div class="mb-6">
                <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-100 mb-4 border-b border-slate-200 dark:border-slate-700 pb-2">
                  Company & Contact Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <!-- Company Name -->
                  <div>
                    <label for="company" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Company Name *
                    </label>
                    <input
                      type="text"
                      name="company"
                      id="company"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="Your Company Name"
                      required
                    />
                  </div>

                  <!-- Industry -->
                  <div>
                    <label for="industry" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Industry
                    </label>
                    <select
                      name="industry"
                      id="industry"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:focus:border-orange-400 dark:focus:ring-orange-400/20 [&>option]:bg-white [&>option]:text-slate-700 dark:[&>option]:bg-neutral-800 dark:[&>option]:text-slate-200"
                    >
                      <option value="">Select Industry</option>
                      <option value="aerospace-defense">Aerospace & Defense</option>
                      <option value="automotive">Automotive</option>
                      <option value="consumer-electronics">Consumer Electronics</option>
                      <option value="healthcare-medical">Healthcare & Medical Devices</option>
                      <option value="industrial-automation">Industrial Automation</option>
                      <option value="iot-connected-devices">IoT & Connected Devices</option>
                      <option value="renewable-energy">Renewable Energy</option>
                      <option value="robotics">Robotics</option>
                      <option value="telecommunications">Telecommunications</option>
                      <option value="transportation">Transportation</option>
                      <option value="other">Other</option>
                    </select>
                  </div>

                  <!-- Contact Name -->
                  <div>
                    <label for="contact-name" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Your Name *
                    </label>
                    <input
                      type="text"
                      name="contact-name"
                      id="contact-name"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="Your Full Name"
                      required
                    />
                  </div>

                  <!-- Title/Role -->
                  <div>
                    <label for="title" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Title/Role
                    </label>
                    <input
                      type="text"
                      name="title"
                      id="title"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="e.g., Engineering Manager, CTO"
                    />
                  </div>

                  <!-- Email -->
                  <div>
                    <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Email Address *
                    </label>
                    <input
                      type="email"
                      name="email"
                      id="email"
                      autocomplete="email"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="your@company.com"
                      required
                    />
                  </div>

                  <!-- Phone -->
                  <div>
                    <label for="phone" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Phone Number
                    </label>
                    <input
                      type="tel"
                      name="phone"
                      id="phone"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="(xxx) xxx-xxxx"
                    />
                  </div>
                </div>
              </div>

              <!-- Project Details -->
              <div class="mb-8">
                <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-100 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">
                  Project Details
                </h2>
                <div class="grid grid-cols-1 gap-6">
                  <!-- Services Needed -->
                  <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-3">
                      Services Needed * (Select all that apply)
                    </label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                      <label class="flex items-center">
                        <input type="checkbox" name="services[]" value="consulting" class="rounded border-gray-300 text-orange-600 focus:ring-orange-500 dark:border-gray-600 dark:bg-gray-700">
                        <span class="ml-2 text-sm text-slate-700 dark:text-slate-300">Consulting & Strategy</span>
                      </label>
                      <label class="flex items-center">
                        <input type="checkbox" name="services[]" value="product-development" class="rounded border-gray-300 text-orange-600 focus:ring-orange-500 dark:border-gray-600 dark:bg-gray-700">
                        <span class="ml-2 text-sm text-slate-700 dark:text-slate-300">Product Development</span>
                      </label>
                      <label class="flex items-center">
                        <input type="checkbox" name="services[]" value="testing-validation" class="rounded border-gray-300 text-orange-600 focus:ring-orange-500 dark:border-gray-600 dark:bg-gray-700">
                        <span class="ml-2 text-sm text-slate-700 dark:text-slate-300">Testing & Validation</span>
                      </label>
                    </div>
                  </div>

                  <!-- Project Title -->
                  <div>
                    <label for="project-title" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Project Title *
                    </label>
                    <input
                      type="text"
                      name="project-title"
                      id="project-title"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="Brief project name or description"
                      required
                    />
                  </div>

                  <!-- Project Description -->
                  <div>
                    <label for="project-description" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Detailed Project Description *
                    </label>
                    <textarea
                      id="project-description"
                      name="project-description"
                      rows="6"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="Please provide a detailed description of your project, including objectives, requirements, constraints, and any specific challenges you're facing."
                      required
                    ></textarea>
                  </div>

                  <!-- Technical Requirements -->
                  <div>
                    <label for="technical-requirements" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Technical Requirements & Specifications
                    </label>
                    <textarea
                      id="technical-requirements"
                      name="technical-requirements"
                      rows="4"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="Performance requirements, technical standards, operating conditions, compliance needs, etc."
                    ></textarea>
                  </div>
                </div>
              </div>

              <!-- Project Scope & Timeline -->
              <div class="mb-8">
                <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-100 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">
                  Project Scope & Timeline
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <!-- Project Phase -->
                  <div>
                    <label for="project-phase" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Current Project Phase
                    </label>
                    <select
                      name="project-phase"
                      id="project-phase"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:focus:border-orange-400 dark:focus:ring-orange-400/20 [&>option]:bg-white [&>option]:text-slate-700 dark:[&>option]:bg-neutral-800 dark:[&>option]:text-slate-200"
                    >
                      <option value="">Select Phase</option>
                      <option value="concept">Concept/Ideation</option>
                      <option value="feasibility">Feasibility Study</option>
                      <option value="requirements">Requirements Definition</option>
                      <option value="design">Design Phase</option>
                      <option value="prototyping">Prototyping</option>
                      <option value="testing">Testing & Validation</option>
                      <option value="production-prep">Production Preparation</option>
                      <option value="maintenance">Maintenance/Support</option>
                    </select>
                  </div>

                  <!-- Priority -->
                  <div>
                    <label for="priority" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Project Priority *
                    </label>
                    <select
                      name="priority"
                      id="priority"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:focus:border-orange-400 dark:focus:ring-orange-400/20 [&>option]:bg-white [&>option]:text-slate-700 dark:[&>option]:bg-neutral-800 dark:[&>option]:text-slate-200"
                      required
                    >
                      <option value="">Select Priority</option>
                      <option value="urgent">Urgent - Need to start ASAP</option>
                      <option value="high">High - Starting soon</option>
                      <option value="medium">Medium - Planning ahead</option>
                      <option value="low">Low - Exploratory/Future project</option>
                    </select>
                  </div>

                  <!-- Budget Range -->
                  <div>
                    <label for="budget" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Estimated Budget Range
                    </label>
                    <select
                      name="budget"
                      id="budget"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:focus:border-orange-400 dark:focus:ring-orange-400/20 [&>option]:bg-white [&>option]:text-slate-700 dark:[&>option]:bg-neutral-800 dark:[&>option]:text-slate-200"
                    >
                      <option value="">Select Budget Range</option>
                      <option value="under-5k">Under $5,000</option>
                      <option value="5k-15k">$5,000 - $15,000</option>
                      <option value="15k-50k">$15,000 - $50,000</option>
                      <option value="50k-100k">$50,000 - $100,000</option>
                      <option value="100k-plus">$100,000+</option>
                      <option value="not-sure">Not Sure</option>
                    </select>
                  </div>

                  <!-- Engagement Type -->
                  <div>
                    <label for="engagement-type" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Preferred Engagement Type
                    </label>
                    <select
                      name="engagement-type"
                      id="engagement-type"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:focus:border-orange-400 dark:focus:ring-orange-400/20 [&>option]:bg-white [&>option]:text-slate-700 dark:[&>option]:bg-neutral-800 dark:[&>option]:text-slate-200"
                    >
                      <option value="">Select Engagement Type</option>
                      <option value="fixed-price">Fixed Price Project</option>
                      <option value="hourly">Hourly Consulting</option>
                      <option value="retainer">Monthly Retainer</option>
                      <option value="not-sure">Not Sure / Need Guidance</option>
                    </select>
                  </div>
                </div>
              </div>

              <!-- Additional Information -->
              <div class="mb-8">
                <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-100 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">
                  Additional Information
                </h2>
                <div class="grid grid-cols-1 gap-4">
                  <!-- Existing Documentation -->
                  <div>
                    <label for="existing-docs" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Existing Documentation & Assets
                    </label>
                    <textarea
                      id="existing-docs"
                      name="existing-docs"
                      rows="3"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="Describe any existing documentation, designs, prototypes, or other assets we should be aware of."
                    ></textarea>
                  </div>

                  <!-- Special Requirements -->
                  <div>
                    <label for="special-requirements" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Special Requirements or Constraints
                    </label>
                    <textarea
                      id="special-requirements"
                      name="special-requirements"
                      rows="3"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="NDA requirements, security clearances, specific methodologies, regulatory compliance, etc."
                    ></textarea>
                  </div>

                  <!-- Questions/Concerns -->
                  <div>
                    <label for="questions" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Questions or Concerns
                    </label>
                    <textarea
                      id="questions"
                      name="questions"
                      rows="3"
                      class="block w-full rounded-xl border border-slate-200/50 bg-white/50 backdrop-blur-sm px-4 py-3 text-sm text-slate-700 placeholder:text-slate-500 focus:border-orange-300 focus:outline-none focus:ring focus:ring-orange-200/30 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-600/50 dark:bg-neutral-700/30 dark:text-slate-300 dark:placeholder:text-slate-400 dark:focus:border-orange-400 dark:focus:ring-orange-400/20"
                      placeholder="Any specific questions about our services or concerns about your project?"
                    ></textarea>
                  </div>
                </div>
              </div>

              <!-- Submission -->
              <div class="border-t border-slate-200 dark:border-slate-700 pt-6">
                <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center justify-between">
                  <div>
                    <p class="text-xs text-slate-500 dark:text-slate-400 mb-2">
                      Required fields are marked with *
                    </p>
                    <p class="text-xs text-slate-500 dark:text-slate-400">
                      By submitting this form, you agree to our <a href="/privacy" class="text-orange-700 dark:text-orange-300 hover:text-orange-600 dark:hover:text-orange-400">Privacy Policy</a> and consent to being contacted about your project.
                    </p>
                  </div>
                  <button 
                    name="submit" 
                    class="py-4 px-8 inline-flex justify-center items-center gap-x-2 text-base font-semibold rounded-xl bg-orange-600 text-white hover:bg-orange-500 hover:shadow-lg disabled:opacity-50 disabled:pointer-events-none transition-all duration-300 whitespace-nowrap shadow-md" 
                    type="submit">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                    </svg>
                    Request Quote
                  </button>
                </div>
              </div>

            </form>
          </div>

        <!-- What Happens Next -->
        <div class="bg-slate-50 dark:bg-slate-800 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500">
            <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-100 mb-6">What Happens Next?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center">
                <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center mx-auto mb-4 border border-orange-200 dark:border-orange-800">
                  <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                  </svg>
                </div>
                <h3 class="font-semibold text-slate-800 dark:text-slate-100 mb-2">1. Review</h3>
                <p class="text-sm text-slate-600 dark:text-slate-300">Senior engineer reviews your project for feasibility within 24 hours.</p>
              </div>
              <div class="text-center">
                <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center mx-auto mb-4 border border-orange-200 dark:border-orange-800">
                  <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                </div>
                <h3 class="font-semibold text-slate-800 dark:text-slate-100 mb-2">2. Consultation</h3>
                <p class="text-sm text-slate-600 dark:text-slate-300">Direct conversation with the engineer who'll build it. No sales people.</p>
              </div>
              <div class="text-center">
                <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center mx-auto mb-4 border border-orange-200 dark:border-orange-800">
                  <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <h3 class="font-semibold text-slate-800 dark:text-slate-100 mb-2">3. Quote</h3>
                <p class="text-sm text-slate-600 dark:text-slate-300">Honest quote with fixed pricing and clear deliverables. No surprises.</p>
              </div>
            </div>
          </div>

        <!-- Contact Information -->
        <div class="text-center">
            <h3 class="text-lg font-semibold text-slate-800 dark:text-slate-100 mb-4">Need to discuss your project first?</h3>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <a href={phoneHref} class="inline-flex items-center gap-2 text-orange-700 dark:text-orange-300 hover:text-orange-600 dark:hover:text-orange-400 font-medium">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
