            <!-- Our Guarantees -->
            <div class="bg-slate-50 dark:bg-neutral-800 rounded-2xl p-6 mb-12 border border-slate-200 dark:border-slate-700">
                <h2 class="text-xl font-bold text-slate-800 dark:text-slate-100 text-center mb-6">Our Guarantees</h2>
                <div class="grid md:grid-cols-2 gap-6 max-w-3xl mx-auto">
                    <div class="bg-white dark:bg-neutral-900 rounded-lg p-4 border border-slate-200 dark:border-slate-700">
                        <h3 class="font-semibold text-slate-800 dark:text-slate-100 mb-2">No Surprises</h3>
                        <p class="text-sm text-slate-600 dark:text-slate-300">Fixed-price quotes. <strong>We fix our mistakes at no cost.</strong></p>
                    </div>
