---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";

// About page structured data
const aboutData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "Crab Labs LLC",
    "description": "5 senior electronics engineers with 30+ years combined experience in regulatory-compliant embedded systems for medical devices, industrial automation, and scientific instruments.",
    "foundingDate": "2024",
    "founder": [
      {
        "@type": "Person",
        "name": "Engineering Team",
        "description": "5 senior engineers with expertise in medical device compliance, industrial automation, and scientific instrumentation"
      }
    ],
    "numberOfEmployees": "5",
    "knowsAbout": [
      "Medical Device Engineering",
      "FDA 510k Submissions",
      "IEC 60601 Compliance",
      "Industrial Automation",
      "Scientific Instruments",
      "EMC Testing",
      "PCB Design",
      "Embedded Firmware"
    ],
    "hasCredential": [
      {
        "@type": "EducationalOccupationalCredential",
        "name": "FDA 510k Submissions",
        "description": "12+ successful FDA 510(k) medical device submissions"
      },
      {
        "@type": "EducationalOccupationalCredential",
        "name": "CE Marking Experience",
        "description": "Industrial products with European CE compliance"
      }
    ]
  }
};

// Testimonial structured data
const reviewData = {
  "@context": "https://schema.org",
  "@type": "Review",
  "author": {
    "@type": "Person",
    "name": "Myles Ainley"
  },
  "datePublished": "2024",
  "description": "Crab Labs played a key role in refining and validating our products development.",
  "name": "Client Review",
  "reviewBody": "Crab Labs played a key role in refining and validating our products development.",
  "reviewRating": {
    "@type": "Rating",
    "bestRating": "5",
    "ratingValue": "5",
    "worstRating": "1"
  },
  "itemReviewed": {
    "@type": "LocalBusiness",
    "name": "Crab Labs LLC"
  }
};

// Breadcrumb for about page
const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://crablabs.io"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "About Us",
      "item": "https://crablabs.io/about"
    }
  ]
};
---

<Layout
    title="About Us | Crab Labs"
    description="5 senior electronics engineers, 30+ years experience. 12+ FDA submissions, CE marked products. Direct access medical device, industrial & scientific engineering. Long Beach, California."
>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(aboutData)}></script>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(reviewData)}></script>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(breadcrumbData)}></script>
    <!-- Page uses global styles -->

    <!-- Clean Minimal Background -->
    <div class="absolute inset-0 -z-10 bg-white"></div>

    <div class="page-container"></div>

    <Container>
      <!-- Who We Are Section -->
      <section class="relative mb-12">
        <div class="bg-white py-12 px-16">
          <div class="max-w-6xl mx-auto">
            <h1 class="text-center">Who We Are</h1>
            <div class="text-width text-center mb-12">
              <p class="text-xl text-secondary mb-6">
                5 senior engineers. 30+ years experience. No middlemen.
              </p>
            </div>

          </div>
        </div>
      </section>

      <!-- Industries We Serve -->
      <div class="border-t border-gray-100"></div>
      <section class="relative mb-12 pt-12">
        <div class="bg-white py-12 px-16">
          <div class="max-w-6xl mx-auto">
            <h2>Industries We Serve</h2>
            <div class="grid-3">
              <div class="card">
                <div class="text-2xl font-bold text-primary mb-3">Medical</div>
                <p class="text-secondary mb-4">FDA-compliant devices for diagnostics and therapy</p>
                <h4 class="text-sm font-medium mb-2">We build:</h4>
                <ul class="text-sm text-secondary space-y-1">
                  <li>• IEC 60601 compliant hardware</li>
                  <li>• Safety-critical firmware</li>
                  <li>• Regulatory documentation</li>
                  <li>• EMC pre-compliance testing</li>
                </ul>
              </div>

              <div class="card">
                <div class="text-2xl font-bold text-primary mb-3">Industrial</div>
                <p class="text-secondary mb-4">Automation and control systems for manufacturing</p>
                <h4 class="text-sm font-medium mb-2">We build:</h4>
                <ul class="text-sm text-secondary space-y-1">
                  <li>• Rugged control systems</li>
                  <li>• Real-time sensor integration</li>
                  <li>• Industrial protocols (Modbus, CAN)</li>
                  <li>• High-reliability firmware</li>
                </ul>
              </div>

              <div class="card">
                <div class="text-2xl font-bold text-primary mb-3">Scientific</div>
                <p class="text-secondary mb-4">Lab equipment and precision measurement tools</p>
                <h4 class="text-sm font-medium mb-2">We build:</h4>
                <ul class="text-sm text-secondary space-y-1">
                  <li>• Low-noise analog design</li>
                  <li>• High-speed data acquisition</li>
                  <li>• Precision timing systems</li>
                  <li>• Custom instrumentation</li>
                </ul>
              </div>
            </div>
            <p class="text-center mt-8">
              <a href="/capabilities" class="text-primary hover:underline font-medium">
                View complete technical capabilities →
              </a>
            </p>
          </div>
        </div>
      </section>

      <!-- Project Fit -->
      <div class="border-t border-gray-100"></div>
      <section class="relative mb-12 pt-12">
        <div class="bg-white py-12 px-16">
          <div class="max-w-6xl mx-auto">
            <h2>Project Fit</h2>

            <div class="max-w-5xl mx-auto">
              <div class="grid-2 gap-8">

                <!-- Perfect Fit -->
                <div class="bg-white border-2 border-orange-200 rounded-lg p-6">
                  <div class="text-center mb-6">
                    <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <h3 class="text-xl font-medium text-primary">Great Fit</h3>
                  </div>

                  <div class="space-y-4">
                    <div class="space-y-3 text-sm text-secondary">
                      <div>$10k - $100k project</div>
                      <div>1-12 month timeline</div>
                      <div>Want a fixed price</div>
                      <div>Medical, industrial, or scientific device</div>
                    </div>
                  </div>
                </div>

                <!-- Not the Right Fit -->
                <div class="bg-white border border-gray-200 rounded-lg p-6">
                  <div class="text-center mb-6">
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-700">Not the Right Fit</h3>
                  </div>

                  <div class="space-y-4">
                    <div class="space-y-3 text-sm text-secondary">
                      <div>Under $10k or massive budgets</div>
                      <div>Need someone on-site daily</div>
                      <div>Building consumer gadgets</div>
                      <div>Just need software help</div>
                    </div>
                  </div>
                </div>

              </div>

            </div>
          </div>
        </div>
      </section>

      <!-- How We Work -->
      <div class="border-t border-gray-100"></div>
      <section class="relative mb-12 pt-12">
        <div class="bg-white py-12 px-16">
          <div class="max-w-6xl mx-auto">
            <h2>How We Work</h2>

            <!-- Process Flow -->
            <div class="grid md:grid-cols-5 gap-8">
              <div class="text-center">
                <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-orange-600">1</span>
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Discovery</h4>
                <p class="text-sm text-gray-600 mb-2">30-minute technical discussion with an engineer</p>
                <span class="inline-block px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full">Free</span>
              </div>

              <div class="text-center">
                <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-orange-600">2</span>
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Quote</h4>
                <p class="text-sm text-gray-600 mb-2">Detailed proposal with scope, timeline, and pricing</p>
                <span class="inline-block px-2 py-1 bg-orange-100 text-orange-700 text-xs rounded-full">48 hours</span>
              </div>

              <div class="text-center">
                <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-orange-600">3</span>
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Design</h4>
                <p class="text-sm text-gray-600 mb-2">Refine requirements and establish designs/specs</p>
                <span class="inline-block px-2 py-1 bg-yellow-100 text-yellow-700 text-xs rounded-full">1-4 weeks</span>
              </div>

              <div class="text-center">
                <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-orange-600">4</span>
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Development</h4>
                <p class="text-sm text-gray-600 mb-2">Weekly updates, direct engineer access</p>
                <span class="inline-block px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded-full">1-12 months</span>
              </div>

              <div class="text-center">
                <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-orange-600">5</span>
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Delivery</h4>
                <p class="text-sm text-gray-600 mb-2">Complete handoff with documentation</p>
                <span class="inline-block px-2 py-1 bg-purple-100 text-purple-700 text-xs rounded-full">30 days support</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Client Results -->
      <div class="border-t border-gray-100"></div>
      <section class="relative mb-12 pt-12">
        <div class="bg-white py-12 px-16">
          <div class="max-w-6xl mx-auto">
            <h2>Client Results</h2>

            <div class="grid-2 mb-12">
              <div class="card">
                <div class="flex items-start justify-between mb-4">
                  <h3>Ultrasound Positioning System</h3>
                  <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Medical</span>
                </div>
                <p class="text-secondary mb-4">
                  High precision ultrasound positioning system for automated assessment
                </p>
                <div class="space-y-4 text-sm">
                  <div>
                    <div class="text-muted font-medium mb-2">Challenge:</div>
                    <div class="text-gray-700 leading-relaxed">The previous positioning system couldn't achieve the required precision while maintaining IEC60601 compliance. Motor control algorithms were producing excessive noise and the hardware design created EMI issues.</div>
                  </div>
                  <div>
                    <div class="text-muted font-medium mb-2">Solution:</div>
                    <div class="text-gray-700 leading-relaxed">Complete PCB redesign with proper ground planes and shielding. Implemented custom motor control firmware with advanced control algorithms and trajectory planning.</div>
                  </div>
                  <div>
                    <div class="text-muted font-medium mb-2">Result:</div>
                    <div class="font-medium text-primary">IEC60601 Compliant • 70% smaller • 60% cheaper • 10% faster positioning • 5% more accurate</div>
                  </div>
                </div>
              </div>

              <div class="card">
                <div class="flex items-start justify-between mb-4">
                  <h3>Smart PDU Monitor</h3>
                  <span class="text-xs bg-orange-100 text-orange-800 px-2 py-1 rounded">Industrial</span>
                </div>
                <p class="text-secondary mb-4">
                  Advanced monitoring and analysis system for power distribution in data centers and other similar contexts. 
                </p>
                <div class="space-y-4 text-sm">
                  <div>
                    <div class="text-muted font-medium mb-2">Challenge:</div>
                    <div class="text-gray-700 leading-relaxed">Legacy PDU product line lacking smart features, with customers demanding real-time power monitoring and remote access capabilities without redesigning existing hardware.</div>
                  </div>
                  <div>
                    <div class="text-muted font-medium mb-2">Solution:</div>
                    <div class="text-gray-700 leading-relaxed">Custom hardware design with integrated power monitoring, purpose-built enclosure for seamless PDU integration, and wireless connectivity for remote monitoring and control.</div>
                  </div>
                  <div>
                    <div class="text-muted font-medium mb-2">Result:</div>
                    <div class="font-medium text-primary">Modernized entire product line • Restored competitive positioning • Sales turnaround within 9 months of launch</div>
                  </div>
                </div>
              </div>
            </div>

            <div class="text-center">
              <a href="/case-studies" class="text-primary hover:underline font-medium">
                View all case studies with technical details →
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- What Clients Say -->
      <div class="border-t border-gray-100"></div>
      <section class="relative mb-12 pt-12">
        <div class="bg-white py-12 px-16">
          <div class="max-w-6xl mx-auto">
            <h2>What Clients Say</h2>
            <div>
              <div class="card">
                <div class="mb-4">
                  <div class="text-orange-400 text-2xl mb-2">★★★★★</div>
                  <p class="text-secondary italic">
                    "Crab Labs played a key role in refining and validating our products development."
                  </p>
                </div>
                <div class="border-t border-gray-200 pt-4">
                  <p class="font-medium">Myles Ainley</p>
                  <p class="text-sm text-muted">CEO, Atm0s Research and Development LLC</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Why Choose Us -->
      <div class="border-t border-gray-100"></div>
      <section class="relative mb-12 pt-12">
        <div class="bg-white py-12 px-16">
          <div class="max-w-6xl mx-auto">
            <h2>Honest Comparison: Why Choose Crab Labs</h2>
            <p class="text-center text-secondary mb-12">How we stack up against other options</p>

            <div class="max-w-7xl mx-auto mb-12">
              <!-- Comparison Table -->
              <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                <div class="overflow-x-auto">
                  <table class="w-full">
                    <!-- Header -->
                    <thead class="bg-gray-50">
                      <tr>
                        <th class="px-6 py-4 text-left text-sm font-medium text-gray-900"></th>
                        <th class="px-6 py-4 text-center text-sm font-medium text-orange-600 bg-orange-50">Crab Labs</th>
                        <th class="px-6 py-4 text-center text-sm font-medium text-gray-900">In-House Team</th>
                        <th class="px-6 py-4 text-center text-sm font-medium text-gray-900">Big Consulting</th>
                        <th class="px-6 py-4 text-center text-sm font-medium text-gray-900">Freelancers</th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                      <!-- Time to Start -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Time to Start</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">1 week</span>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">3-6 months</td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">1-3 months</td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">1-4 weeks</td>
                      </tr>
                      <!-- Annual Cost -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Annual Cost</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">$50-75k/year*</span>
                          <div class="text-xs text-gray-500">*Project basis</div>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">$150-250k/year<div class="text-xs text-gray-500">Salary + benefits</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">$200-400k/year<div class="text-xs text-gray-500">Hourly rates</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">$75-150k/year<div class="text-xs text-gray-500">Depends on individual</div></td>
                      </tr>
                      <!-- Team Size -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Team Size</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">2-5 engineers</span>
                          <div class="text-xs text-gray-500">As needed</div>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">1-3 engineers<div class="text-xs text-gray-500">Focused domain</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">5-15 engineers<div class="text-xs text-gray-500">Broad capabilities</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">1 engineer<div class="text-xs text-gray-500">Deep specialization</div></td>
                      </tr>
                      <!-- Experience Level -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Experience Level</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">15+ years avg</span>
                          <div class="text-xs text-gray-500">All senior</div>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">5-15 years<div class="text-xs text-gray-500">Company-specific</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">3-20 years<div class="text-xs text-gray-500">Structured teams</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">2-25 years<div class="text-xs text-gray-500">Varies by individual</div></td>
                      </tr>
                      <!-- Project Risk -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Project Risk</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">Fixed price</span>
                          <div class="text-xs text-gray-500">Our risk</div>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Variable<div class="text-xs text-gray-500">Depends on team</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Shared<div class="text-xs text-gray-500">Time & materials</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Variable<div class="text-xs text-gray-500">Depends on contract</div></td>
                      </tr>
                      <!-- Minimum Engagement -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Minimum Engagement</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">$10k</span>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">$150k+<div class="text-xs text-gray-500">Annual salary</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">$100-500k<div class="text-xs text-gray-500">Enterprise focus</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">$5-50k<div class="text-xs text-gray-500">Variable scope</div></td>
                      </tr>
                      <!-- Support & Guarantee -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Post-Project Support</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">30 days free</span>
                          <div class="text-xs text-gray-500">Then support plans</div>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Ongoing<div class="text-xs text-gray-500">If still employed</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Limited<div class="text-xs text-gray-500">Additional cost</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Varies<div class="text-xs text-gray-500">Individual basis</div></td>
                      </tr>
                      <!-- Documentation -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Documentation</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">Complete handoff</span>
                          <div class="text-xs text-gray-500">Source + docs</div>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Internal knowledge<div class="text-xs text-gray-500">Team-based learning</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Formal process<div class="text-xs text-gray-500">Standardized approach</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Varies by freelancer<div class="text-xs text-gray-500">Individual approach</div></td>
                      </tr>
                      <!-- Communication -->
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">Communication</td>
                        <td class="px-6 py-4 text-center text-sm bg-orange-50">
                          <span class="font-semibold text-orange-700">Direct to engineers</span>
                          <div class="text-xs text-gray-500">Weekly updates</div>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Direct<div class="text-xs text-gray-500">Daily availability</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Through PM<div class="text-xs text-gray-500">Filtered communication</div></td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">Direct<div class="text-xs text-gray-500">Individual style</div></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <div class="text-center bg-orange-50 rounded-lg p-8">
              <h3 class="text-2xl font-medium mb-4">When to Choose What</h3>
              <div class="max-w-3xl mx-auto text-left space-y-4">
