---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Container.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const allTags = [...new Set(posts.flatMap(post => post.data.tags))].sort();

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(date);
}
---

<Layout title="Blog | Crab Labs" description="Technical articles on PCB design, firmware, and regulatory compliance.">
  <div class="page-container">
    <Container>
      <div class="py-16 lg:py-24">

        <!-- Header -->
        <section class="max-w-4xl mx-auto text-center mb-12">
          <p class="text-sm font-mono text-brand-600 mb-2">Blog</p>
          <h1 class="text-4xl sm:text-5xl font-display font-semibold text-neutral-900 mb-4">Engineering Insights</h1>
          <p class="text-lg text-neutral-600 max-w-xl mx-auto">
            PCB design, firmware, and compliance. Practical knowledge from working engineers.
          </p>
        </section>

        <!-- Search and Filter -->
        <section class="max-w-4xl mx-auto mb-10">
          <div class="bg-white border border-neutral-200 rounded-lg p-5">
            <div class="grid md:grid-cols-3 gap-4">
              <!-- Search -->
              <div class="md:col-span-2">
                <label for="search" class="block text-sm font-medium text-neutral-700 mb-1">Search</label>
                <div class="relative">
                  <input
                    type="text"
                    id="search"
                    placeholder="Search posts..."
                    class="w-full pl-10 pr-4 py-2 border border-neutral-300 rounded-lg text-sm focus:border-brand-500 focus:ring-1 focus:ring-brand-500"
                  />
                  <svg class="absolute left-3 top-2.5 w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
              </div>

              <!-- Sort -->
              <div>
                <label for="sort" class="block text-sm font-medium text-neutral-700 mb-1">Sort</label>
                <select id="sort" class="w-full px-4 py-2 border border-neutral-300 rounded-lg text-sm focus:border-brand-500 focus:ring-1 focus:ring-brand-500">
                  <option value="date-desc">Newest</option>
                  <option value="date-asc">Oldest</option>
                  <option value="title-asc">A-Z</option>
                </select>
              </div>
            </div>

            <!-- Tags -->
            <div class="mt-4 pt-4 border-t border-neutral-100">
              <div class="flex flex-wrap gap-2">
                <button data-tag="all" class="tag-filter px-3 py-1.5 text-sm font-medium bg-brand-600 text-white rounded-md">
                  All
                </button>
                {allTags.map(tag => (
                  <button data-tag={tag} class="tag-filter px-3 py-1.5 text-sm font-medium bg-neutral-100 text-neutral-600 rounded-md hover:bg-neutral-200">
                    {tag}
                  </button>
                ))}
              </div>
            </div>

            <div class="mt-4 text-xs text-neutral-500">
              <span id="results-count">{posts.length}</span> of {posts.length} posts
            </div>
          </div>
        </section>

        <!-- No Results -->
        <div id="no-results" class="hidden max-w-4xl mx-auto text-center py-12 mb-8">
          <p class="text-neutral-500 mb-4">No posts found.</p>
          <button id="clear-filters" class="text-sm text-brand-600 hover:underline">Clear filters</button>
        </div>

        <!-- Posts Grid -->
        <div id="posts-grid" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto">
          {posts.map((post) => (
            <article
              class="blog-post bg-white border border-neutral-200 rounded-lg overflow-hidden hover:border-brand-300 transition-colors flex flex-col"
              data-title={post.data.title.toLowerCase()}
              data-description={post.data.description.toLowerCase()}
              data-tags={post.data.tags.join(',')}
              data-date={post.data.pubDate.toISOString()}
            >
              {post.data.heroImage && (
                <div class="aspect-video bg-neutral-100">
                  <img
                    src={post.data.heroImage}
                    alt=""
                    loading="lazy"
                    class="w-full h-full object-cover"
                  />
                </div>
              )}

              <div class="p-5 flex flex-col flex-grow">
                {post.data.featured && (
                  <span class="inline-block px-2 py-0.5 text-xs font-medium bg-brand-600 text-white mb-3 self-start">
                    Featured
                  </span>
                )}

                <h2 class="text-lg font-semibold text-neutral-900 mb-2 leading-tight">
                  <a href={`/blog/${post.slug}/`} class="hover:text-brand-600 transition-colors">
                    {post.data.title}
                  </a>
                </h2>

                <p class="text-sm text-neutral-600 mb-4 line-clamp-2 flex-grow">
                  {post.data.description}
                </p>

                <div class="flex items-center justify-between text-sm pt-3 border-t border-neutral-100">
                  <time datetime={post.data.pubDate.toISOString()} class="text-neutral-500 text-xs">
                    {formatDate(post.data.pubDate)}
                  </time>
                  <a href={`/blog/${post.slug}/`} class="text-brand-600 font-medium text-xs hover:underline">
                    Read â†’
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>

      </div>
    </Container>
  </div>
</Layout>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search') as HTMLInputElement;
  const sortSelect = document.getElementById('sort') as HTMLSelectElement;
  const tagButtons = document.querySelectorAll('.tag-filter');
  const postsGrid = document.getElementById('posts-grid');
  const posts = document.querySelectorAll('.blog-post');
  const resultsCount = document.getElementById('results-count');
  const noResults = document.getElementById('no-results');
  const clearFilters = document.getElementById('clear-filters');

  let currentTag = 'all';
  let searchTerm = '';

  searchInput?.addEventListener('input', (e) => {
    searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
    filterPosts();
  });

  sortSelect?.addEventListener('change', sortPosts);

  tagButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      const btn = e.target as HTMLElement;
      const tag = btn.dataset.tag || 'all';

      tagButtons.forEach(b => {
        b.classList.remove('bg-brand-600', 'text-white');
        b.classList.add('bg-neutral-100', 'text-neutral-600');
      });
      btn.classList.remove('bg-neutral-100', 'text-neutral-600');
      btn.classList.add('bg-brand-600', 'text-white');

      currentTag = tag;
      filterPosts();
    });
  });

  clearFilters?.addEventListener('click', () => {
    if (searchInput) searchInput.value = '';
    searchTerm = '';
    currentTag = 'all';
    tagButtons.forEach(btn => {
      const b = btn as HTMLElement;
      if (b.dataset.tag === 'all') {
        b.classList.add('bg-brand-600', 'text-white');
        b.classList.remove('bg-neutral-100', 'text-neutral-600');
      } else {
        b.classList.remove('bg-brand-600', 'text-white');
        b.classList.add('bg-neutral-100', 'text-neutral-600');
      }
    });
    filterPosts();
  });

  function filterPosts() {
    let visible = 0;
    posts.forEach(post => {
      const el = post as HTMLElement;
      const title = el.dataset.title || '';
      const desc = el.dataset.description || '';
      const tags = el.dataset.tags?.split(',') || [];

      const matchSearch = !searchTerm || title.includes(searchTerm) || desc.includes(searchTerm);
      const matchTag = currentTag === 'all' || tags.includes(currentTag);

      if (matchSearch && matchTag) {
        el.style.display = 'flex';
        visible++;
      } else {
        el.style.display = 'none';
      }
    });

    if (resultsCount) resultsCount.textContent = visible.toString();
    if (postsGrid && noResults) {
      postsGrid.style.display = visible === 0 ? 'none' : 'grid';
      noResults.classList.toggle('hidden', visible > 0);
    }
  }

  function sortPosts() {
    const val = sortSelect?.value || 'date-desc';
    const arr = Array.from(posts);
    arr.sort((a, b) => {
      const aEl = a as HTMLElement;
      const bEl = b as HTMLElement;
      switch(val) {
        case 'date-asc': return new Date(aEl.dataset.date || '').getTime() - new Date(bEl.dataset.date || '').getTime();
        case 'date-desc': return new Date(bEl.dataset.date || '').getTime() - new Date(aEl.dataset.date || '').getTime();
        case 'title-asc': return (aEl.dataset.title || '').localeCompare(bEl.dataset.title || '');
        default: return 0;
      }
    });
    arr.forEach(post => postsGrid?.appendChild(post));
  }
});
</script>
