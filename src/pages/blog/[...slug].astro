---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Container.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import BlogCTA from '../../components/BlogCTA.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content, headings } = await post.render();

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<Layout title={`${post.data.title} | Crab Labs Blog`}>
  <div class="page-container">
    <Container>
      <div class="content-container py-section">
        <article class="card card-lg">
      <div class="max-w-4xl mx-auto">
        <!-- Back Navigation -->
        <div class="mb-8">
          <a href="/blog" class="inline-flex items-center text-primary hover:underline font-medium">
            <svg class="icon-sm mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Back to Blog
          </a>
        </div>

        <!-- Hero Section -->
        <header class="mb-12">
          {post.data.featured && (
            <div class="mb-4">
              <span class="inline-block px-2 py-1 bg-brand-600 text-white text-xs font-semibold">
                Featured
              </span>
            </div>
          )}

          <h1 class="heading-page text-center mb-4">
            {post.data.title}
          </h1>

          <p class="text-large text-secondary text-center mb-8">
            {post.data.description}
          </p>

          <!-- Meta Information -->
          <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-muted pb-8 border-b border-gray-200">
            <div class="flex items-center">
              <svg class="icon-sm mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="font-medium">{post.data.author}</span>
            </div>

            <div class="flex items-center">
              <svg class="icon-sm mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <time datetime={post.data.pubDate.toISOString()}>
                {formatDate(post.data.pubDate)}
              </time>
            </div>

            {post.data.updatedDate && (
              <div class="flex items-center">
                <svg class="icon-sm mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                <span>Updated {formatDate(post.data.updatedDate)}</span>
              </div>
            )}
          </div>

          {post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-6 justify-center">
              {post.data.tags.map((tag: string) => (
                <span class="px-2 py-1 text-xs bg-gray-100 text-muted">#{tag}</span>
              ))}
            </div>
          )}
        </header>

        <!-- Hero Image -->
        {post.data.heroImage && (
          <div class="mb-12 flex justify-center">
            <div class="max-w-2xl w-full">
              <img 
                src={post.data.heroImage} 
                alt={post.data.title}
                class="w-full h-auto max-h-[400px] object-contain rounded-2xl shadow-2xl bg-white  p-8"
              />
            </div>
          </div>
        )}

        <!-- Table of Contents -->
        <TableOfContents headings={headings} />

        <!-- Article Content -->
        <div class="max-w-none">
          <div class="prose prose-lg max-w-3xl mx-auto
                      prose-headings:text-gray-900 prose-headings:font-light
                      prose-h1:text-3xl prose-h1:mb-6 prose-h1:mt-8 prose-h1:tracking-tight
                      prose-h2:text-2xl prose-h2:mb-6 prose-h2:mt-12 prose-h2:border-l-4 prose-h2:border-orange-600 prose-h2:pl-4 prose-h2:tracking-tight
                      prose-h3:text-xl prose-h3:mb-4 prose-h3:mt-8 prose-h3:text-gray-900 prose-h3:font-medium
                      prose-h4:text-lg prose-h4:mb-3 prose-h4:mt-6 prose-h4:text-gray-900 prose-h4:font-medium
                      prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-6
                      prose-p:first-of-type:text-xl prose-p:first-of-type:font-light prose-p:first-of-type:mb-8 prose-p:first-of-type:text-gray-600
                      prose-li:text-gray-700 prose-li:mb-2 prose-li:leading-relaxed
                      prose-ul:my-6 prose-ol:my-6 prose-ul:space-y-2 prose-ol:space-y-2
                      prose-strong:text-gray-900 prose-strong:font-medium
                      prose-em:text-orange-600 prose-em:font-medium
                      prose-a:text-orange-600 prose-a:underline prose-a:decoration-orange-500/60 hover:prose-a:text-orange-700 hover:prose-a:decoration-orange-600
                      prose-code:text-orange-700 prose-code:bg-orange-50 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:font-medium prose-code:border prose-code:border-orange-200
                      prose-pre:bg-gray-50 prose-pre:border prose-pre:border-gray-200 prose-pre:rounded-lg prose-pre:p-4
                      prose-blockquote:border-l-4 prose-blockquote:border-orange-500 prose-blockquote:pl-6 prose-blockquote:text-gray-600 prose-blockquote:italic prose-blockquote:bg-orange-50 prose-blockquote:py-4 prose-blockquote:rounded-r-lg
                      prose-img:rounded-lg prose-img:border prose-img:border-gray-200 prose-img:shadow-sm
                      prose-table:border prose-table:border-gray-200 prose-table:rounded-lg prose-table:overflow-hidden prose-table:shadow-sm prose-table:bg-white
                      prose-th:bg-gray-50 prose-th:text-gray-900 prose-th:font-medium prose-th:px-6 prose-th:py-4
                      prose-td:text-gray-700 prose-td:border-gray-200 prose-td:px-6 prose-td:py-4 prose-td:bg-white">
            <Content />
          </div>

          <!-- Blog CTA -->
          <div class="max-w-3xl mx-auto">
            <BlogCTA />
          </div>
        </div>

      </div>
        </article>
      </div>
    </Container>
  </div>
</Layout>

<style>
  /* Clean numbered lists */
  .prose ol {
    counter-reset: item-counter;
  }
  
  .prose ol li {
    counter-increment: item-counter;
    position: relative;
    padding-left: 1.75rem;
  }
  
  .prose ol li::before {
    content: counter(item-counter);
    position: absolute;
    left: 0;
    top: 0.1rem;
    width: 1.25rem;
    height: 1.25rem;
    background: #fb923c;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    font-size: 0.75rem;
  }
  
  /* Clean bullet points */
  .prose ul li {
    position: relative;
    padding-left: 1.25rem;
  }
  
  .prose ul li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.55rem;
    width: 0.35rem;
    height: 0.35rem;
    background: #fb923c;
    border-radius: 50%;
  }

  /* Consistent font weights throughout */
  .prose {
    font-weight: 400;
  }
</style>