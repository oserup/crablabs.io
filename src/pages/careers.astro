---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
---

<main id="content">
    <!-- Page Layout -->
    <Layout title="Electronics Engineering Careers | Senior PCB Design Jobs | Remote + Long Beach | Crab Labs">
        <Container>
            <div class="max-w-6xl px-4 pt-16 pb-12 mx-auto">
                <!-- Header Section -->
                <div class="text-center mb-16">
                    <h1 class="text-5xl font-bold text-gray-800 mb-16">Join Our Team</h1>
                </div>

                <!-- Senior Electrical Engineer Position -->
                <div class="bg-white rounded-2xl p-10 mb-16 border-2 border-gray-200 hover:shadow-2xl hover:shadow-orange-500/20 hover:border-orange-500 hover:scale-[1.01] transition-all duration-500">
                    <div class="max-w-4xl mx-auto">
                        <div class="text-center mb-8">
                            <h2 class="text-3xl font-bold text-gray-800 mb-4">Senior Electrical Engineer</h2>
                            <p class="text-lg text-gray-600 leading-relaxed">
                                Lead electronics design for medical devices, robotics, and industrial automation.
                            </p>
                        </div>
                        
                        <div class="grid md:grid-cols-2 gap-8 mb-8">
                            <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200
                                <h3 class="text-xl font-bold text-gray-800 mb-4">Requirements</h3>
                                <ul class="space-y-2 text-gray-600
                                    <li>• 7+ years electronics design experience</li>
                                    <li>• Medical device regulations knowledge</li>
                                    <li>• Altium Designer proficiency</li>
                                    <li>• Power electronics expertise</li>
                                </ul>
                            </div>
                            
                            <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200
                                <h3 class="text-xl font-bold text-gray-800 mb-4">What We Offer</h3>
                                <ul class="space-y-2 text-gray-600
                                    <li>• Competitive compensation</li>
                                    <li>• Direct client interaction</li>
                                    <li>• Technical autonomy</li>
                                    <li>• Diverse project portfolio</li>
                                </ul>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <a href="mailto:jobs@crablabs.io?subject=Senior EE Application" 
                               class="inline-flex items-center px-8 py-4 bg-orange-600 text-white font-bold rounded-xl hover:bg-orange-700 hover:scale-105 shadow-lg transition-all duration-200">
                                Apply Now
                                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- General Application -->
                <div class="bg-gray-50 rounded-2xl p-10 mb-16 border-2 border-gray-200 hover:shadow-2xl hover:shadow-orange-500/20 hover:border-orange-500 hover:scale-[1.01] transition-all duration-500">
                    <div class="max-w-4xl mx-auto text-center">
                        <h2 class="text-3xl font-bold text-gray-800 mb-4">Don't See a Perfect Match?</h2>
                        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
                            We're always looking for exceptional engineers. Send us your resume and tell us what you're passionate about.
                        </p>
                        <a href="mailto:jobs@crablabs.io?subject=General Application" 
                           class="inline-flex items-center px-8 py-4 bg-gray-600 text-white font-bold rounded-xl hover:bg-gray-700 hover:scale-105 shadow-lg transition-all duration-200">
                            Send Resume
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </Container>
    </Layout>
</main>

