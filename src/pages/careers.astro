---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
---

<main id="content">
    <!-- Page Layout -->
    <Layout title="Electronics Engineering Careers | Senior PCB Design Jobs | Remote + Long Beach | Crab Labs">
        <Container>
            <div class="max-w-6xl px-4 pt-16 pb-12 mx-auto">
                <!-- Hero Section -->
                <div class="text-center mb-16">
                    <h1 class="text-4xl font-light text-gray-900 sm:text-5xl lg:text-6xl lg:leading-tight tracking-tight">
                        Join Our Team
                    </h1>
                    <p class="mt-8 text-xl text-gray-600 leading-relaxed font-light max-w-3xl mx-auto">
                        Build the future of electronics engineering with innovative projects and cutting-edge technology.
                    </p>
                </div>

                <!-- Senior Electrical Engineer Position -->
                <section class="relative mb-16">
                <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                    <div class="max-w-4xl mx-auto">
                        <div class="text-center mb-8">
                            <h2 class="text-4xl font-light text-gray-900 mb-6 tracking-tight">Senior Electrical Engineer</h2>
                            <p class="text-xl text-gray-600 leading-relaxed font-light max-w-2xl mx-auto">
                                Lead electronics design for medical devices, robotics, and industrial automation.
                            </p>
                        </div>
                        
                        <div class="grid md:grid-cols-2 gap-8 mb-8">
                            <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                                <h3 class="text-xl font-semibold text-gray-800 mb-4">Requirements</h3>
                                <ul class="space-y-2 text-gray-600">
                                    <li>• 7+ years electronics design experience</li>
                                    <li>• Medical device regulations knowledge</li>
                                    <li>• Altium Designer proficiency</li>
                                    <li>• Power electronics expertise</li>
                                </ul>
                            </div>
                            
                            <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                                <h3 class="text-xl font-semibold text-gray-800 mb-4">What We Offer</h3>
                                <ul class="space-y-2 text-gray-600">
                                    <li>• Competitive compensation</li>
                                    <li>• Direct client interaction</li>
                                    <li>• Technical autonomy</li>
                                    <li>• Diverse project portfolio</li>
                                </ul>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <a href="mailto:jobs@crablabs.io?subject=Senior EE Application"
                               class="inline-flex items-center px-8 py-4 bg-orange-600 text-white font-semibold rounded-xl hover:bg-orange-500 transition-colors shadow-md">
                                Apply Now
                                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                </section>

                <!-- General Application -->
                <section class="relative mb-16">
                <div class="bg-white rounded-2xl p-12 shadow-sm border border-gray-100">
                    <div class="max-w-4xl mx-auto text-center">
                        <h2 class="text-4xl font-light text-gray-900 mb-6 tracking-tight">Don't See a Perfect Match?</h2>
                        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed font-light">
                            We're always looking for exceptional engineers. Send us your resume and tell us what you're passionate about.
                        </p>
                        <a href="mailto:jobs@crablabs.io?subject=General Application"
                           class="inline-flex items-center px-8 py-4 bg-gray-600 text-white font-semibold rounded-xl hover:bg-gray-500 transition-colors shadow-md">
                            Send Resume
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </div>
                </section>
            </div>
        </Container>
    </Layout>
</main>

