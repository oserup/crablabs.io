---
// components
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import { Image } from "astro:assets";

// icons
import electrical from "../assets/icons/electrical.svg"
import software from "../assets/icons/code.svg";

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": ["ProfessionalService", "LocalBusiness"],
  "name": "Crab Labs - Electronic Product Development Services",
  "alternateName": "Crab Labs LLC",
  "description": "Seasoned electronics engineers delivering hardware that works reliably the first time. We fix what other firms can't. Medical devices, industrial systems, 5-axis controllers. Direct engineer access for SMBs.",
  "url": "https://crablabs.io",
  "telephone": "+1-424-271-5569",
  "email": "contact@crablabs.io",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "235 E Broadway Ste 210",
    "addressLocality": "Long Beach",
    "addressRegion": "CA",
    "postalCode": "90803",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "33.7701",
    "longitude": "-118.1937"
  },
  "areaServed": "United States",
  "serviceArea": {
    "@type": "Country",
    "name": "United States"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Electronic Engineering Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "PCB Design Services",
          "description": "Custom printed circuit board design and layout services"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Embedded Firmware Development",
          "description": "Embedded software and firmware development for microcontrollers"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Pre-Compliance EMC Testing",
          "description": "EMC pre-compliance testing and validation for medical devices and industrial systems"
        }
      }
    ]
  },
  "priceRange": "$2500+",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "8"
  }
};

// FAQ Schema for Common Questions section
const faqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How quickly can we start?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Usually 1-2 weeks. Clear scope, timeline, and price - no 47-page proposals."
      }
    },
    {
      "@type": "Question",
      "name": "How do you handle regulatory requirements?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We've been through regulatory submissions before. We design for compliance from day one and handle pre-compliance testing. For final certification, we work with accredited test labs."
      }
    },
    {
      "@type": "Question",
      "name": "Can you work with existing systems?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Absolutely. Half our projects involve upgrading existing systems. We're good at adding new features without breaking what already works."
      }
    },
    {
      "@type": "Question",
      "name": "What do we receive at project completion?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Everything. Source code, schematics, PCB files, BOM, and manufacturing docs. It's all yours - no licensing fees or strings attached."
      }
    }
  ]
};
---

<!-- ========== MAIN CONTENT ========== -->
<main id="content">
  <Layout
    title="Electronics Engineering for SMBs | Hardware That Works First Time | Crab Labs"
    description="Seasoned engineers delivering reliable hardware for small & medium businesses. We fix what others can't. Medical devices, industrial systems. Direct engineer access means clarity and quality."
  >
    <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)}></script>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(faqStructuredData)}></script>
    <Hero />
    <Container>
      <!-- What We Do -->
      <div class="bg-slate-50 dark:bg-slate-800 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500 group">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-4">
              What We Do
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed">
              Complete electronic product development. From concept through production. Experience in medical devices, industrial systems, and consumer products.
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-8 mb-12">
            <div class="bg-white dark:bg-slate-900 rounded-2xl p-8 shadow-lg border-2 border-slate-200 dark:border-slate-700 hover:scale-[1.03] hover:shadow-2xl hover:shadow-orange-500/20 hover:border-orange-500 dark:hover:border-orange-400 transition-all duration-400 group">
              <div class="w-16 h-16 bg-slate-600 dark:bg-slate-400 rounded-2xl flex items-center justify-center mb-6 mx-auto shadow-lg group-hover:shadow-xl group-hover:scale-110 group-hover:bg-orange-500 transition-all duration-300">
                <Image src={electrical} alt="Hardware Design" format={"svg"} class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-xl font-bold text-slate-700 dark:text-slate-300 group-hover:text-orange-500 dark:group-hover:text-orange-400 mb-4 transition-colors duration-300">Hardware Design</h3>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
                PCB design, mixed-signal, power management. Built for reliability and compliance from day one.
              </p>
            </div>

            <div class="bg-white dark:bg-slate-900 rounded-2xl p-8 shadow-lg border-2 border-slate-200 dark:border-slate-700 hover:scale-[1.03] hover:shadow-2xl hover:shadow-orange-500/20 hover:border-orange-500 dark:hover:border-orange-400 transition-all duration-400 group">
              <div class="w-16 h-16 bg-slate-600 dark:bg-slate-400 rounded-2xl flex items-center justify-center mb-6 mx-auto shadow-lg group-hover:shadow-xl group-hover:scale-110 group-hover:bg-orange-500 transition-all duration-300">
                <Image src={software} alt="Embedded Software" format={"svg"} class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-xl font-bold text-slate-700 dark:text-slate-300 group-hover:text-orange-500 dark:group-hover:text-orange-400 mb-4 transition-colors duration-300">Firmware Development</h3>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
                Real-time systems, device drivers, communication protocols. C, Rust, Python. Production-ready code.
              </p>
            </div>
          </div>

          <!-- Project Scope Details -->
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-white dark:bg-slate-900 rounded-xl p-6 border-2 border-slate-200 dark:border-slate-700 shadow-md">
              <h4 class="font-bold text-slate-800 dark:text-slate-100 mb-3">Testing & Validation</h4>
              <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                Pre-compliance EMC testing in-house. Environmental and reliability testing.
              </p>
            </div>
            <div class="bg-white dark:bg-slate-900 rounded-xl p-6 border-2 border-slate-200 dark:border-slate-700 shadow-md">
              <h4 class="font-bold text-slate-800 dark:text-slate-100 mb-3">Regulatory Experience</h4>
              <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                FDA, CE, FCC compliance experience. We know the standards.
              </p>
            </div>
            <div class="bg-white dark:bg-slate-900 rounded-xl p-6 border-2 border-slate-200 dark:border-slate-700 shadow-md">
              <h4 class="font-bold text-slate-800 dark:text-slate-100 mb-3">Production Support</h4>
              <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                Complete documentation, test procedures, manufacturing support.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Industry Focus & Client Breakdown -->
      <div class="bg-white dark:bg-slate-900 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-4">
              Industries We Serve
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed">
              Medical devices (42%), industrial automation (35%), scientific instruments (20%). Deep experience where reliability matters.
            </p>
          </div>

          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Client Breakdown Chart -->
            <div class="text-center">
              <h3 class="text-xl font-bold text-slate-800 dark:text-slate-100 mb-6">Project Distribution</h3>
              <div class="relative w-80 h-80 mx-auto">
                <!-- SVG Pie Chart -->
                <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
                  <!-- Medical Devices - 42% -->
                  <circle
                    cx="50" cy="50" r="40"
                    fill="none"
                    stroke="#059669"
                    stroke-width="20"
                    stroke-dasharray="105 251"
                    stroke-dashoffset="0"
                    class="opacity-90"
                  />
                  <!-- Industrial/Robotics - 35% -->
                  <circle
                    cx="50" cy="50" r="40"
                    fill="none"
                    stroke="#2563eb"
                    stroke-width="20"
                    stroke-dasharray="88 251"
                    stroke-dashoffset="-105"
                    class="opacity-90"
                  />
                  <!-- Scientific Instruments - 20% -->
                  <circle
                    cx="50" cy="50" r="40"
                    fill="none"
                    stroke="#dc2626"
                    stroke-width="20"
                    stroke-dasharray="50 251"
                    stroke-dashoffset="-193"
                    class="opacity-90"
                  />
                  <!-- Other - 3% -->
                  <circle
                    cx="50" cy="50" r="40"
                    fill="none"
                    stroke="#6b7280"
                    stroke-width="20"
                    stroke-dasharray="8 251"
                    stroke-dashoffset="-243"
                    class="opacity-90"
                  />
                </svg>

                <!-- Center Label -->
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center">
                    <div class="text-xl font-bold text-slate-800 dark:text-slate-100">Project</div>
                    <div class="text-sm text-slate-600 dark:text-slate-400">Distribution</div>
                  </div>
                </div>
              </div>

              <!-- Legend -->
              <div class="mt-6 space-y-3">
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-4 h-4 bg-green-600 rounded-full"></div>
                  <span class="text-slate-700 dark:text-slate-300 font-medium">Medical Devices</span>
                  <span class="text-slate-500 dark:text-slate-500">42%</span>
                </div>
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-4 h-4 bg-blue-600 rounded-full"></div>
                  <span class="text-slate-700 dark:text-slate-300 font-medium">Industrial & Robotics</span>
                  <span class="text-slate-500 dark:text-slate-500">35%</span>
                </div>
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-4 h-4 bg-red-600 rounded-full"></div>
                  <span class="text-slate-700 dark:text-slate-300 font-medium">Scientific Instruments</span>
                  <span class="text-slate-500 dark:text-slate-500">20%</span>
                </div>
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-4 h-4 bg-gray-500 rounded-full"></div>
                  <span class="text-slate-700 dark:text-slate-300 font-medium">Other</span>
                  <span class="text-slate-500 dark:text-slate-500">3%</span>
                </div>
              </div>
            </div>

            <!-- Industry Details -->
            <div class="space-y-6">
              <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 border-2 border-green-200 dark:border-green-700">
                <div class="flex items-center mb-3">
                  <div class="w-3 h-3 bg-green-600 rounded-full mr-3"></div>
                  <h4 class="font-bold text-slate-800 dark:text-slate-100">Medical Devices</h4>
                </div>
                <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed mb-3">
                  Diagnostic equipment, patient monitoring, surgical tools, and therapy devices requiring FDA compliance.
                </p>
                <div class="text-xs text-slate-500 dark:text-slate-500">
                  IEC 60601 compliance • EMC testing • Safety documentation
                </div>
              </div>

              <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 border-2 border-blue-200 dark:border-blue-700">
                <div class="flex items-center mb-3">
                  <div class="w-3 h-3 bg-blue-600 rounded-full mr-3"></div>
                  <h4 class="font-bold text-slate-800 dark:text-slate-100">Industrial & Robotics</h4>
                </div>
                <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed mb-3">
                  Process control systems, automation equipment, motor controllers, and robotic subsystems for manufacturing.
                </p>
                <div class="text-xs text-slate-500 dark:text-slate-500">
                  Industrial protocols • Real-time control • High-reliability design
                </div>
              </div>

              <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 border-2 border-red-200 dark:border-red-700">
                <div class="flex items-center mb-3">
                  <div class="w-3 h-3 bg-red-600 rounded-full mr-3"></div>
                  <h4 class="font-bold text-slate-800 dark:text-slate-100">Scientific Instruments</h4>
                </div>
                <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed mb-3">
                  Precision measurement equipment, laboratory instruments, and research tools requiring high accuracy and stability.
                </p>
                <div class="text-xs text-slate-500 dark:text-slate-500">
                  Precision analog design • Low-noise systems • Calibration procedures
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Our Process -->
      <div class="bg-slate-50 dark:bg-slate-800 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-4">
              Our Process
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed">
              Clear requirements, robust design, thorough testing. Fixed-price contracts available.
            </p>
          </div>

          <div class="grid lg:grid-cols-4 gap-6">
            <div class="text-center">
              <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 border-2 border-orange-200 dark:border-orange-800">
                <span class="text-2xl font-bold text-orange-600 dark:text-orange-400">1</span>
              </div>
              <h3 class="font-bold text-slate-800 dark:text-slate-100 mb-2">Define Requirements</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed">
                Clear specifications upfront. No surprises.
              </p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 border-2 border-orange-200 dark:border-orange-800">
                <span class="text-2xl font-bold text-orange-600 dark:text-orange-400">2</span>
              </div>
              <h3 class="font-bold text-slate-800 dark:text-slate-100 mb-2">Design Right</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed">
                Account for manufacturing, testing, compliance.
              </p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 border-2 border-orange-200 dark:border-orange-800">
                <span class="text-2xl font-bold text-orange-600 dark:text-orange-400">3</span>
              </div>
              <h3 class="font-bold text-slate-800 dark:text-slate-100 mb-2">Test Thoroughly</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed">
                Find issues early. Pass compliance testing first time.
              </p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 border-2 border-orange-200 dark:border-orange-800">
                <span class="text-2xl font-bold text-orange-600 dark:text-orange-400">4</span>
              </div>
              <h3 class="font-bold text-slate-800 dark:text-slate-100 mb-2">Document Everything</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed">
                Complete documentation package for production.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Project Examples -->
      <div class="bg-white dark:bg-slate-900 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-4">
              Recent Projects
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed">
              Examples from medical, industrial, and scientific applications.
            </p>
          </div>

          <div class="grid lg:grid-cols-3 gap-8">
            <!-- Medical Device Project -->
            <div class="bg-slate-50 dark:bg-slate-800 p-6 rounded-2xl border-2 border-green-200 dark:border-green-700 shadow-lg hover:scale-[1.02] hover:shadow-xl hover:shadow-green-500/15 hover:border-green-500 dark:hover:border-green-400 transition-all duration-400">
              <div class="flex items-center mb-4">
                <div class="w-3 h-3 bg-green-600 rounded-full mr-3"></div>
                <span class="px-3 py-1 bg-green-600 text-white text-xs font-bold rounded-full">Medical Device</span>
              </div>
              <h3 class="text-lg font-bold text-slate-800 dark:text-slate-100 mb-3">5-Axis Controller Redesign</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed mb-4">
                Previous firm's design failed compliance. Complete redesign required.
              </p>
              <div class="space-y-2 text-xs text-slate-500 dark:text-slate-400">
                <div><strong>Challenge:</strong> Failed compliance testing</div>
                <div><strong>Solution:</strong> Ground-up redesign</div>
                <div><strong>Result:</strong> Passed all tests, in production</div>
              </div>
            </div>

            <!-- Industrial Project -->
            <div class="bg-slate-50 dark:bg-slate-800 p-6 rounded-2xl border-2 border-blue-200 dark:border-blue-700 shadow-lg hover:scale-[1.02] hover:shadow-xl hover:shadow-blue-500/15 hover:border-blue-500 dark:hover:border-blue-400 transition-all duration-400">
              <div class="flex items-center mb-4">
                <div class="w-3 h-3 bg-blue-600 rounded-full mr-3"></div>
                <span class="px-3 py-1 bg-blue-600 text-white text-xs font-bold rounded-full">Industrial</span>
              </div>
              <h3 class="text-lg font-bold text-slate-800 dark:text-slate-100 mb-3">Industrial Automation</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed mb-4">
                Legacy PLC system modernization for 24/7 production facility.
              </p>
              <div class="space-y-2 text-xs text-slate-500 dark:text-slate-400">
                <div><strong>Challenge:</strong> Zero downtime requirement</div>
                <div><strong>Solution:</strong> Parallel system deployment</div>
                <div><strong>Result:</strong> 30% efficiency improvement</div>
              </div>
            </div>

            <!-- Scientific Instrument -->
            <div class="bg-slate-50 dark:bg-slate-800 p-6 rounded-2xl border-2 border-red-200 dark:border-red-700 shadow-lg hover:scale-[1.02] hover:shadow-xl hover:shadow-red-500/15 hover:border-red-500 dark:hover:border-red-400 transition-all duration-400">
              <div class="flex items-center mb-4">
                <div class="w-3 h-3 bg-red-600 rounded-full mr-3"></div>
                <span class="px-3 py-1 bg-red-600 text-white text-xs font-bold rounded-full">Scientific</span>
              </div>
              <h3 class="text-lg font-bold text-slate-800 dark:text-slate-100 mb-3">Precision Measurement</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed mb-4">
                Scientific instrument requiring sub-micron accuracy.
              </p>
              <div class="space-y-2 text-xs text-slate-500 dark:text-slate-400">
                <div><strong>Challenge:</strong> Noise floor requirements</div>
                <div><strong>Solution:</strong> Custom analog front-end</div>
                <div><strong>Result:</strong> 10x sensitivity improvement</div>
              </div>
            </div>
          </div>

          <div class="mt-10 text-center">
            <a href="/case-studies" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-500 to-orange-600 text-white font-medium rounded-xl hover:from-orange-600 hover:to-orange-700 hover:scale-105 shadow-lg transition-all duration-200">
              View Detailed Case Studies
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Direct Access Advantage -->
      <div class="bg-slate-50 dark:bg-slate-800 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-6">
            Direct Engineer Access
          </h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-white dark:bg-slate-900 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
              <h3 class="font-bold text-slate-800 dark:text-slate-100 mb-3">Direct Communication</h3>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">Talk directly with the engineers building your product. No account managers.</p>
            </div>
            <div class="bg-white dark:bg-slate-900 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
              <h3 class="font-bold text-slate-800 dark:text-slate-100 mb-3">Experienced Team</h3>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">15+ years average experience. We've seen the pitfalls.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Common Questions -->
      <div class="bg-white dark:bg-slate-900 rounded-2xl p-10 mb-16 border-2 border-slate-200 dark:border-slate-700 hover:shadow-2xl hover:shadow-orange-500/20 dark:hover:shadow-none hover:border-orange-500 dark:hover:border-orange-400 hover:scale-[1.01] transition-all duration-500">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-4">
            Common Questions
          </h2>
